<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="144px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bdz_short"
            android:layout_width="96px"
            android:layout_height="96px"
            android:layout_margin="30px"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="40px"
            app:layout_auto_basewidth="height" />

        <com.cnksi.sjjc.View.UnderLineLinearLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="15px"
            android:paddingTop="15px"
            app:drawUnderLine="true">

            <TextView
                android:id="@+id/tv_tool_name"
                android:layout_width="wrap_content"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="bottom|left"
                android:textColor="#fd6067"
                android:textSize="40px" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_serial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/tv_date"
                    android:textColor="#c0bab9"
                    android:textSize="36px" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="#c0bab9"
                    android:textSize="36px" />
            </RelativeLayout>
        </com.cnksi.sjjc.View.UnderLineLinearLayout>
    </LinearLayout>
</layout>