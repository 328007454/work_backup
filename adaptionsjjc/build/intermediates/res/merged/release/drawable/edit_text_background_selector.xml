<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@android:color/white" />

            <corners android:radius="@dimen/half_corner_radius" />

            <stroke android:width="@dimen/line_eight_width" android:color="@color/red_color" />
        </shape></item>
    <item android:state_pressed="false"><shape>
            <solid android:color="@android:color/white" />

            <corners android:radius="@dimen/half_corner_radius" />

            <stroke android:width="@dimen/line_eight_width" android:color="@color/line_color" />
        </shape></item>

</selector>