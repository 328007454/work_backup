<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评价标准"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/standardDescTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="标准描述" />

            <com.cnksi.inspe.widget.MyScrollVListView
                android:id="@+id/standardWordRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dip"
                android:background="@color/colorBackgound" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:text="扣分原则"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/scoreDescTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="扣分原则" />

            <com.cnksi.inspe.widget.MyScrollVListView
                android:id="@+id/scoreWordRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="问题描述"
                android:textColor="#333333"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/issueEdit"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/inspe_edit_border_selector"
                android:gravity="top"
                android:hint="请输入问题描述"
                android:textSize="14dp" />


            <Button
                android:id="@+id/okBtn"
                style="@style/View.Button"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="@drawable/inspe_btn_green_selector"
                android:text="确定" />
        </LinearLayout>
    </ScrollView>
</layout>