<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.cnksi.sjjc.view.gztz.SelectGroup
                android:id="@+id/kgdlqbh"
                android:layout_width="match_parent"
                android:layout_height="138px"
                app:select_hint_str="请选择断路器编号"
                app:title_str="*断路器编号"
                />

            <com.cnksi.sjjc.view.gztz.TextGroup
                android:id="@+id/dlqtzqk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title_str="*断路器跳闸情况"/>

            <com.cnksi.sjjc.view.gztz.TextGroup
                android:id="@+id/yyjjcqk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title_str="*原因及检查情况"/>


            <com.cnksi.sjjc.view.gztz.SelectGroup
                android:id="@+id/sbxb"
                android:layout_width="match_parent"
                android:layout_height="138px"
                android:orientation="horizontal"
                app:title_str="设备相别"/>


            <com.cnksi.sjjc.view.gztz.SingleRadioGroup
                android:id="@+id/sfdz"
                android:layout_width="match_parent"
                android:layout_height="138px"
                android:background="@color/white"
                app:title_str="*是否动作"/>

            <com.cnksi.sjjc.view.gztz.SingleRadioGroup
                android:id="@+id/kgdzpj"
                android:layout_width="match_parent"
                android:layout_height="138px"
                android:background="@color/white"
                app:select_str="正动|误动"
                app:title_str="*开关动作评价"/>
            <com.cnksi.sjjc.view.UnderLineLinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="138px"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/_30px"
                app:drawUnderLine="true">

                <TextView
                    style="@style/layout_gztz_title"
                    android:text="*故障线路"
                    />

                <com.cnksi.sjjc.view.ContainsEmojiEditText
                    android:id="@+id/gzxl"
                    style="@style/layout_gztz_num_input"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="30px"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text=""
                    />

            </com.cnksi.sjjc.view.UnderLineLinearLayout>
            <com.cnksi.sjjc.view.gztz.SingleRadioGroup
                android:id="@+id/sfzngz"
                android:layout_width="match_parent"
                android:layout_height="138px"
                android:visibility="gone"
                android:background="@color/white"
                app:title_str="*是否站内故障"/>


            <com.cnksi.sjjc.view.gztz.SelectTimeGroup
                android:id="@+id/gzfssj"
                android:layout_width="match_parent"
                android:layout_height="138px"
                app:select_hint_str="请选择故障发生时间"
                app:select_type="ymdhm"
                app:title_str="*故障发生时间"/>

            <com.cnksi.sjjc.view.gztz.SelectGroup
                android:id="@+id/gzdydj"
                android:layout_width="match_parent"
                android:layout_height="138px"
                app:select_hint_str="请选择故障电压等级"
                app:title_str="*故障电压等级"
                />

            <com.cnksi.sjjc.view.gztz.SelectGroup
                android:id="@+id/gzlx"
                android:layout_width="match_parent"
                android:layout_height="138px"
                app:select_hint_str="请选择故障类型"
                app:title_str="*故障类型"
                />

            <com.cnksi.sjjc.view.gztz.SelectGroup
                android:id="@+id/gzsdtq"
                android:layout_width="match_parent"
                android:layout_height="138px"
                app:select_hint_str="请选择故障时段天气"
                app:title_str="*故障时段天气"
                />

            <com.cnksi.sjjc.view.gztz.SingleRadioGroup
                android:id="@+id/gzsfyj"
                android:layout_width="match_parent"
                android:layout_height="138px"
                android:background="@color/white"
                app:title_str="*故障是否越级"/>

            <com.cnksi.sjjc.view.gztz.SelectGroup
                android:id="@+id/gzlb"
                android:layout_width="match_parent"
                android:layout_height="138px"
                android:visibility="gone"
                app:select_hint_str="请选择故障类别"
                app:title_str="*故障类别"
                />

            <com.cnksi.sjjc.view.gztz.SingleRadioGroup
                android:id="@+id/sftz"
                android:layout_width="match_parent"
                android:layout_height="138px"
                android:background="@color/white"
                app:title_str="*是否跳闸"/>

            <com.cnksi.sjjc.view.gztz.SingleRadioGroup
                android:id="@+id/sfty"
                android:layout_width="match_parent"
                android:layout_height="138px"
                android:background="@color/white"
                app:title_str="*是否停运"/>

            <com.cnksi.sjjc.view.gztz.SelectGroup
                android:id="@+id/tyfw"
                android:layout_width="match_parent"
                android:layout_height="138px"
                android:visibility="gone"
                app:select_hint_str="请选择停运范围"
                app:title_str="*停运范围"
                />

            <com.cnksi.sjjc.view.gztz.SelectGroup
                android:id="@+id/gztysb"
                android:layout_width="match_parent"
                android:layout_height="138px"
                android:visibility="gone"
                app:select_hint_str="请选择停运设备"
                app:title_str="*故障停运设备"
                />

            <com.cnksi.sjjc.view.gztz.TextGroup
                android:id="@+id/dlqjcqk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:default_str="正常"
                app:title_str="*断路器检查情况"/>

            <com.cnksi.sjjc.view.gztz.TextGroup
                android:id="@+id/bz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title_str="备注"/>

            <Button
                android:id="@+id/btn_sure"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="20px"
                android:background="@drawable/grass_green_button_background_selector"
                android:gravity="center"
                android:text="确认，下一步"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tv_text_size"/>

        </LinearLayout>
    </ScrollView>
</layout>