<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_line_background_selector"
        android:gravity="center_vertical"
        android:minHeight="150px"
        android:orientation="vertical"
        android:paddingBottom="@dimen/sync_margin_10px"
        android:paddingLeft="@dimen/core_padding_30px"
        android:paddingTop="@dimen/sync_margin_10px">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_name"
            android:drawablePadding="@dimen/_20px"
            android:drawableLeft="@drawable/xs_icon_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="313131313"
            android:textColor="@color/xs_special_type_color"
            android:textSize="40px" />

        <android.support.v7.widget.AppCompatTextView
            android:visibility="gone"
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11212"
            android:textColor="@color/xs_et_hint_color"
            android:textSize="36px" />
    </LinearLayout>
</layout>