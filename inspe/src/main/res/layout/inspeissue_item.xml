<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/stateTxt"
        style="@style/View.TextView.Content.Name"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:padding="6dip"
        android:text="未整改" />

    <LinearLayout
        style="@style/View.LinearLayout"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@id/stateTxt">


        <LinearLayout style="@style/View.LinearLayout.Item">

            <TextView
                android:id="@+id/contextTxt"
                style="@style/View.TextView.Content.Name"
                android:text="未按照发布单位有效技术b标准、规章制度清册的。" />

        </LinearLayout>

        <LinearLayout style="@style/View.LinearLayout.Item">

            <TextView
                style="@style/View.TextView.Content.Name"
                android:text="整改日期:" />

            <TextView
                android:id="@+id/dateTxt"
                style="@style/View.TextView.Content.Value"
                android:text="2018年1月1日" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#ffc3c3c3" />
</RelativeLayout>