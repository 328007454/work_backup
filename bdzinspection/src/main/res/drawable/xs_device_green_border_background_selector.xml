<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/xs_half_corner_radius"/>

            <solid android:color="@color/xs_light_green_color"/>

            <stroke android:width="@dimen/xs_line_height" android:color="@color/xs_green_color"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners android:radius="@dimen/xs_half_corner_radius"/>

            <solid android:color="@color/xs_light_green_color"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/xs_half_corner_radius"/>

            <solid android:color="@android:color/transparent"/>

            <stroke android:width="@dimen/xs_line_height" android:color="@color/xs_green_color"/>
        </shape>
    </item>

</selector>