<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    android:layout_marginBottom="10px"
    android:layout_marginTop="10px"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16px">

        <TextView
            android:id="@+id/tv_work_bdzname"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_minheight"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/new_drawable_half_padding"
            android:gravity="center_vertical"
            android:text="222"
            android:textColor="@color/global_text_color"
            android:textSize="@dimen/new_global_text_size"/>


        <ImageView
            android:id="@+id/ibt_up"
            android:layout_width="@dimen/new_layout_title_height"
            android:layout_height="@dimen/new_edit_text_minheight"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/new_drawable_half_padding"
            android:layout_toRightOf="@id/tv_heat_device_item"
            android:background="@drawable/work_status_yixuke_background"
            android:src="@mipmap/ic_unupload"
            android:textSize="@dimen/new_global_text_size"
            android:visibility="visible"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_wor_status"
            android:layout_width="@dimen/edit_text_minwidth"
            android:layout_height="@dimen/new_edit_text_minheight"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/new_drawable_half_padding"
            android:layout_toLeftOf="@id/ibt_up"
            android:layout_toRightOf="@id/tv_defect_degree_item"
            android:background="@drawable/work_status_background"
            android:gravity="center"
            android:text="待签发"
            android:textColor="@color/white"
            android:textSize="@dimen/new_global_text_size"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16px"
        android:paddingRight="16px">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_minheight"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/new_drawable_half_padding"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="33333333"
            android:textColor="@color/global_gray_text_color"
            android:textSize="@dimen/new_global_text_size"/>

        <TextView
            android:id="@+id/tv_piao_zhong"
            android:layout_width="0dp"
            android:layout_height="@dimen/new_edit_text_minheight"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/new_drawable_half_padding"
            android:layout_toRightOf="@id/tv_defect_degree_item"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="111"
            android:textColor="@color/global_gray_text_color"
            android:textSize="@dimen/new_global_text_size"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16px"
        android:paddingRight="16px">

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_minheight"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/new_drawable_half_padding"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="33333333"
            android:textColor="@color/global_gray_text_color"
            android:textSize="@dimen/new_global_text_size"/>

        <TextView
            android:id="@+id/tv_end_work_time"
            android:layout_width="0dp"
            android:layout_height="@dimen/new_edit_text_minheight"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/new_drawable_half_padding"
            android:layout_toRightOf="@id/tv_defect_degree_item"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="111"
            android:textColor="@color/global_gray_text_color"
            android:textSize="@dimen/new_global_text_size"

            />

    </LinearLayout>

    <View
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@id/ll_container"
        android:background="@android:color/darker_gray"/>
</LinearLayout>
