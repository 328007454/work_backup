<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
        >

        <TextView
            android:id="@+id/tv_panorama"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/hwcw_line_height"
            android:textColor="@color/app_base_green_color"
            android:textSize="@dimen/yw_title_gqj_size"
            />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/hwcw_line_height"
            tools:ignore="ContentDescription"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tv_panorama"
            android:background="@color/gray_background_color"
            android:visibility="visible"/>

    </RelativeLayout>
</layout>