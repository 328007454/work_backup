<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/special_tips_background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="95px"
            android:layout_marginTop="30px"
            android:background="@drawable/linearlayout_stroke"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|left"
                android:paddingLeft="20px"
                android:text="测试负责人"
                android:textColor="@color/wt_green_color"
                android:textSize="@dimen/new_global_text_size" />

            <TextView
                android:id="@+id/tv_manager"
                android:layout_width="190px"
                android:layout_height="70px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60px"
                android:background="@drawable/green_button_background_selector"
                android:gravity="center"
                android:text="添加人员"
                android:textColor="@color/white_text"
                android:textSize="@dimen/global_text_small_size" />
        </RelativeLayout>

        <GridView

            android:id="@+id/gv_test_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:cacheColorHint="@android:color/transparent"
            android:gravity="center"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"
            android:scrollbarStyle="outsideOverlay"
            android:stretchMode="columnWidth" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="95px"
            android:layout_marginTop="30px"
            android:background="@drawable/linearlayout_stroke">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|left"
                android:paddingLeft="20px"
                android:text="测试成员"
                android:textColor="@color/wt_green_color"
                android:textSize="@dimen/new_global_text_size" />

            <TextView
                android:id="@+id/tv_person"
                android:layout_width="190px"
                android:layout_height="70px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60px"
                android:background="@drawable/green_button_background_selector"
                android:gravity="center"
                android:text="添加人员"
                android:textColor="@color/white_text"
                android:textSize="@dimen/global_text_small_size" />
        </RelativeLayout>

        <GridView

            android:id="@+id/gv_test_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:cacheColorHint="@android:color/transparent"
            android:gravity="center"
            android:listSelector="@android:color/transparent"
            android:minHeight="70px"
            android:numColumns="3"
            android:scrollbarStyle="outsideOverlay"
            android:stretchMode="columnWidth" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="95px"
            android:layout_marginTop="30px"
            android:background="@drawable/linearlayout_stroke">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|left"
                android:paddingLeft="20px"
                android:text="分析结论"
                android:textColor="@color/wt_green_color"
                android:textSize="@dimen/new_global_text_size" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_conclusion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:hint="请输入分析结论"
            android:minHeight="180px"
            android:paddingLeft="33px"
            android:paddingRight="20px"
            android:textColor="@color/wt_green_color"
            android:textColorHint="@color/et_hint_color" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/device_photo_tips_minheight"
        android:layout_marginLeft="@dimen/global_padding_left_right"
        android:layout_marginRight="@dimen/global_padding_left_right"
        android:background="@drawable/red_button_background_selector"
        android:gravity="center"
        android:text="确认完成"
        android:textColor="@android:color/white"
        android:textSize="@dimen/global_text_size" />
</LinearLayout>