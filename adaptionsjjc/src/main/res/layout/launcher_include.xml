<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="">

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="265px"
        android:background="@color/new_launcher_title"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45px"
            android:orientation="horizontal"
            android:paddingLeft="40px"
            android:paddingRight="40px">

            <TextView
                android:id="@+id/txt_team"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="乐山供电公司一班"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size38px" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:text="2017年3月22日 星期三"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size38px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="40px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="40px"
            android:paddingRight="40px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="15px"
                android:layout_weight="1"
                android:background="@drawable/launcher_include_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="42px"
                    app:srcCompat="@drawable/icon_bdz_location" />

                <TextView
                    android:id="@+id/txt_bdz"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="45px"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="范坝变电站"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size38px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15px"
                android:layout_weight="1"
                android:background="@drawable/launcher_include_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_person"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="42px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="张三、李四"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size38px" />

                <ImageView
                    android:layout_width="29dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="40px"
                    android:background="@mipmap/ic_launcher" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>