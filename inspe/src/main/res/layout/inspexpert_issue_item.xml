<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="#FFFFFFFF"
    android:minHeight="40dip"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/scoreTxt"
        style="@style/View.TextView.Content.Name"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="12dp"
        android:text="-0.5分"
        android:textColor="@color/color_statetxe_red"
        android:textSize="14dp" />


    <LinearLayout
        style="@style/View.LinearLayout"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_toLeftOf="@id/stateTxt">

        <TextView
            android:id="@+id/deviceNameTxt"
            style="@style/View.TextView"
            android:text="设备名称"
            android:textColor="#626262"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/descTxt"
            style="@style/View.TextView"
            android:layout_marginTop="8dp"
            android:text="问题描述"
            android:textColor="#C0BAB9"
            android:textSize="12dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackgound"
        android:visibility="gone" />
</RelativeLayout>