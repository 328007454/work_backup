<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="115px"
        android:layout_margin="15px">

        <RelativeLayout
            android:id="@+id/rl_device_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/inspe_device_green_border_background_selector">

            <!-- 设备名称 -->
            <ImageView
                android:id="@+id/ibt_copy_pen"
                android:layout_width="29px"
                android:layout_height="41px"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/inspe_24px"
                android:background="@android:color/transparent"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_device_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/ibt_copy_pen"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingRight="@dimen/inspe_36px"
                android:textColor="@drawable/inspe_device_select_textcolor"
                android:textSize="@dimen/inspe_36px" />
        </RelativeLayout>

        <!-- 扩大抄录点击区域 -->

        <View
            android:id="@+id/bt_copy_data"
            android:layout_width="105px"
            android:layout_height="125px" />

    </FrameLayout>
</layout>