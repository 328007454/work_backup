<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="">

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_group_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xs_gray_background_color"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/xs_text_button_padding_top_px"
            android:paddingLeft="@dimen/xs_global_padding_left_right_px"
            android:paddingTop="@dimen/xs_text_button_padding_top_px"
            android:textColor="@color/xs_green_color"
            android:textSize="@dimen/xs_global_text_size_px" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/xs_line_half_width_px"
            android:background="@color/xs_line_color" />

        <LinearLayout

            android:id="@+id/ll_copy_value_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/xs_global_padding_top_bottom_px"
            android:layout_marginRight="@dimen/xs_global_padding_left_right_px"
            android:layout_marginTop="@dimen/xs_global_padding_top_bottom_px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_copy_content"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/xs_global_padding_left_right_px"
                android:layout_weight="1"
                android:drawablePadding="@dimen/xs_drawable_padding_px"
                android:focusable="true"
                android:gravity="center_vertical|left"
                android:minHeight="@dimen/xs_list_item_minheight_px"
                android:textColor="@color/xs_global_text_color"
                android:textSize="@dimen/xs_global_text_size_px" />

            <EditText
                android:id="@+id/et_copy_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="@string/xs_please_input_value_str"
                android:minHeight="@dimen/xs_edit_text_minheight_px"
                android:minWidth="@dimen/xs_edit_text_minwidth_px"
                android:textColor="@color/xs_green_color"
                android:textColorHint="@color/xs_global_gray_text_color"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/xs_global_text_size_px" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/xs_gray_confirm_color" />
    </LinearLayout>
</layout>