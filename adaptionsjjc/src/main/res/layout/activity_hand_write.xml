<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_background_color"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/global_padding_small_left_right"
                android:background="@drawable/red_button_background_selector"
                android:padding="@dimen/global_padding_small_left_right"
                android:text="清除"
                android:textColor="@color/white"
                android:textSize="@dimen/btn_text_size"
                />

            <Button
                android:id="@+id/save1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/global_padding_small_left_right"
                android:background="@drawable/grass_green_button_background_selector"
                android:padding="@dimen/global_padding_small_left_right"
                android:text="保存并返回"
                android:textColor="@color/white"
                android:textSize="@dimen/btn_text_size"
                />

            <Button
                android:id="@+id/change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="改变颜色"
                android:visibility="gone"/>

            <Button
                android:id="@+id/changewidth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="改变宽度"
                android:visibility="gone"
                />
        </LinearLayout>

        <com.cnksi.core.view.LinePathView
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</layout>