<?xml version="1.0" encoding="utf-8"?>
<!--android:layout_marginTop="@dimen/report_margin_top"-->
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:id="@+id/ll_report_content_container"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/global_padding_top_bottom_px"
                  android:background="@mipmap/ic_report_background"
                  android:orientation="vertical"
                  android:paddingLeft="@dimen/global_padding_half_left_right_px"
                  android:paddingRight="@dimen/global_padding_half_left_right_px"
                  android:paddingTop="@dimen/report_padding_top_px">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/global_padding_left_right_px"
                    android:layout_marginRight="@dimen/global_padding_left_right_px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="@string/work_start_time_str"
                        android:textColor="@color/global_gray_text_color"
                        android:textSize="@dimen/device_item_name_text_size_1"/>

                    <TextView
                        android:id="@+id/tv_inspection_start_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/green_color"
                        android:textSize="@dimen/global_text_size_px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/global_padding_left_right_px"
                    android:layout_marginRight="@dimen/global_padding_left_right_px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="@string/work_end_time_str"
                        android:textColor="@color/global_gray_text_color"
                        android:textSize="@dimen/device_item_name_text_size_px"/>

                    <TextView
                        android:id="@+id/tv_inspection_end_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/green_color"
                        android:textSize="@dimen/global_text_size_px"/>
                </LinearLayout>
                <!--工作单位 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/global_padding_left_right_px"
                    android:layout_marginRight="@dimen/global_padding_left_right_px"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="工作单位"
                        android:textColor="@color/global_gray_text_color"
                        android:textSize="@dimen/global_text_size_px"/>

                    <TextView
                        android:id="@+id/tv_work_department"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/green_color"
                        android:textSize="@dimen/global_text_size_px"/>
                </LinearLayout>
                <!--工作班组 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/global_padding_left_right_px"
                    android:layout_marginRight="@dimen/global_padding_left_right_px"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="工作班组"
                        android:textColor="@color/global_gray_text_color"
                        android:textSize="@dimen/global_text_size_px"/>

                    <TextView
                        android:id="@+id/tv_work_banzu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/green_color"
                        android:textSize="@dimen/global_text_size_px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/global_padding_left_right_px"
                    android:layout_marginRight="@dimen/global_padding_left_right_px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="@string/work_persons_str"
                        android:textColor="@color/global_gray_text_color"
                        android:textSize="@dimen/device_item_name_text_size_1"/>

                    <TextView
                        android:id="@+id/tv_inspection_person"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/green_color"
                        android:textSize="@dimen/global_text_size_1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/global_padding_left_right_px"
                        android:layout_marginRight="@dimen/global_padding_left_right_px"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_inspection_temperature_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="@string/work_temperature_jcstr"
                            android:textColor="@color/global_gray_text_color"
                            android:textSize="@dimen/global_text_size_px"/>

                        <TextView
                            android:id="@+id/tv_inspection_temperature"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:textColor="@color/green_color"
                            android:textSize="@dimen/global_text_size_px"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/global_padding_left_right_px"
                        android:layout_marginRight="@dimen/global_padding_left_right_px"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_inspection_humidity_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="@string/work_humidity_jcstr"
                            android:textColor="@color/global_gray_text_color"
                            android:textSize="@dimen/global_text_size_px"/>

                        <TextView
                            android:id="@+id/tv_inspection_humidity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:textColor="@color/green_color"
                            android:textSize="@dimen/global_text_size_px"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/global_padding_left_right_px"
                        android:layout_marginRight="@dimen/global_padding_left_right_px"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_inspection_weather_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="@string/work_weather_jcstr"
                            android:textColor="@color/global_gray_text_color"
                            android:textSize="@dimen/global_text_size_px"/>

                        <TextView
                            android:id="@+id/tv_inspection_weather"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:textColor="@color/green_color"
                            android:textSize="@dimen/global_text_size_px"/>
                    </LinearLayout>
                </LinearLayout>

                <com.cnksi.sjjc.view.DotView style="@style/DashStyle"/>

                <!-- 检测结果-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="20px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="检测结果"
                        android:textColor="@android:color/black"
                        android:textSize="48px"/>

                    <TextView
                        android:id="@+id/tv_continue_inspection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="@dimen/global_padding_left_right_px"
                        android:background="@drawable/red_button_background_selector"
                        android:clickable="true"
                        android:drawableLeft="@mipmap/ic_continue_inspection"
                        android:drawablePadding="@dimen/drawable_padding_px"
                        android:gravity="center"
                        android:paddingBottom="@dimen/text_button_padding_top_px"
                        android:paddingLeft="@dimen/text_button_padding_left_px"
                        android:paddingRight="@dimen/text_button_padding_left_px"
                        android:paddingTop="@dimen/text_button_padding_top_px"
                        android:text="@string/see_inspection_details_str"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/device_item_name_text_size_1"/>
                </LinearLayout>
                <!-- 开关柜 -->
                <LinearLayout
                    style="@style/AnimalReportLinearLayoutStyle"
                    android:gravity="center_vertical"
                    android:minHeight="90px">

                    <TextView
                        style="@style/AnimalReportTextViewStyle"
                        android:layout_weight="1"
                        android:text="开关柜孔洞"
                        />

                    <TextView
                        android:id="@+id/tv_kaiguangui"
                        style="@style/AnimalReportTextViewStyle"
                        android:layout_weight="1.5"
                        android:textColor="@color/green_color"
                        />
                </LinearLayout>
                <!-- 室内孔洞-->
                <LinearLayout
                    style="@style/AnimalReportLinearLayoutStyle"
                    android:gravity="center_vertical"
                    android:minHeight="90px">

                    <TextView
                        style="@style/AnimalReportTextViewStyle"
                        android:layout_weight="1"
                        android:text="室内孔洞"
                        />

                    <TextView
                        android:id="@+id/tv_shineikongdong"
                        style="@style/AnimalReportTextViewStyle"
                        android:layout_weight="1.5"
                        android:textColor="@color/green_color"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/AnimalReportLinearLayoutStyle"
                    android:gravity="center_vertical"
                    android:minHeight="90px">

                    <TextView
                        style="@style/AnimalReportTextViewStyle"
                        android:layout_weight="1"
                        android:text="室外孔洞"
                        />

                    <TextView
                        android:id="@+id/tv_shiwaikongdong"
                        style="@style/AnimalReportTextViewStyle"
                        android:layout_weight="1.5"
                        android:textColor="@color/green_color"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/AnimalReportLinearLayoutStyle"
                    android:gravity="center_vertical"
                    android:minHeight="90px">

                    <TextView
                        style="@style/AnimalReportTextViewStyle"
                        android:layout_weight="1"
                        android:text="门窗严密"
                        />

                    <TextView
                        android:id="@+id/tv_menchuang"
                        style="@style/AnimalReportTextViewStyle"
                        android:layout_weight="1.5"
                        android:textColor="@color/green_color"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/AnimalReportLinearLayoutStyle"
                    android:gravity="center_vertical"
                    android:minHeight="90px"
                    android:visibility="gone">

                    <TextView
                        style="@style/AnimalReportTextViewStyle"
                        android:layout_weight="1"
                        android:text="鼠药器放置情况"
                        />

                    <TextView
                        android:id="@+id/tv_shuyaoqi"
                        style="@style/AnimalReportTextViewStyle"
                        android:layout_weight="1.5"
                        android:textColor="@color/green_color"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/AnimalReportLinearLayoutStyle"
                    android:gravity="center_vertical"
                    android:minHeight="90px">

                    <TextView
                        style="@style/AnimalReportTextViewStyle"
                        android:layout_weight="1"
                        android:text="鼠药及捕鼠器具\n放置情况"
                        />

                    <TextView
                        android:id="@+id/tv_bushuqi"
                        style="@style/AnimalReportTextViewStyle"
                        android:layout_weight="1.5"
                        android:textColor="@color/green_color"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/AnimalReportLinearLayoutStyle"
                    android:gravity="center_vertical"
                    android:minHeight="90px">

                    <TextView
                        style="@style/AnimalReportTextViewStyle"
                        android:layout_weight="1"
                        android:text="发现孔洞"
                        />

                    <TextView
                        android:id="@+id/tv_discoverhole"
                        style="@style/AnimalReportTextViewStyle"
                        android:layout_weight="1.5"
                        android:textColor="@color/green_color"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/AnimalReportLinearLayoutStyle"
                    android:gravity="center_vertical"
                    android:minHeight="90px">

                    <TextView
                        style="@style/AnimalReportTextViewStyle"
                        android:layout_weight="1"
                        android:text="清除孔洞"
                        />

                    <TextView
                        android:id="@+id/tv_clearhole"
                        style="@style/AnimalReportTextViewStyle"
                        android:layout_weight="1.5"
                        android:textColor="@color/green_color"
                        />
                </LinearLayout>

                <com.cnksi.sjjc.view.DotView style="@style/DashStyle"/>

                <LinearLayout
                    style="@style/AnimalReportLinearLayoutStyle"
                    android:gravity="center_vertical"
                    android:minHeight="90px">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="45px"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        >

                        <TextView
                            style="@style/AnimalReportTextViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="检查过程"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <ImageView
                                android:id="@+id/img_jianchaprocess"
                                android:layout_width="match_parent"
                                android:layout_height="245px"
                                android:layout_marginBottom="30px"
                                android:layout_marginRight="8px"
                                android:layout_marginTop="15px"
                                android:scaleType="fitXY"

                                tools:ignore="ContentDescription"/>

                            <TextView
                                android:id="@+id/tv_pic_num"
                                android:layout_width="@dimen/new_text_width_and_height"
                                android:layout_height="@dimen/new_text_width_and_height"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/text_background_color"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/new_text_picture_size"
                                app:layout_auto_baseheight="width"/>

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="45px"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        >

                        <TextView
                            style="@style/AnimalReportTextViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="发现孔洞"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <ImageView
                                android:id="@+id/img_discoverhole"
                                android:layout_width="match_parent"
                                android:layout_height="245px"
                                android:layout_marginBottom="30px"
                                android:layout_marginRight="8px"
                                android:layout_marginTop="15px"
                                android:scaleType="fitXY"
                                tools:ignore="ContentDescription"/>

                            <TextView
                                android:id="@+id/tv_discoverhole_num"
                                android:layout_width="@dimen/new_text_width_and_height"
                                android:layout_height="@dimen/new_text_width_and_height"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/text_background_color"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/new_text_picture_size"
                                app:layout_auto_baseheight="width"/>

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        >

                        <TextView
                            style="@style/AnimalReportTextViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="清除孔洞"
                            />

                        <RelativeLayout
                            android:id="@+id/re_clear_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <ImageView
                                android:id="@+id/img_clearhole"
                                android:layout_width="match_parent"
                                android:layout_height="245px"
                                android:layout_marginBottom="30px"
                                android:layout_marginRight="8px"
                                android:layout_marginTop="15px"
                                android:scaleType="fitXY"
                                tools:ignore="ContentDescription"/>

                            <TextView
                                android:id="@+id/tv_clearhole_num"
                                android:layout_width="@dimen/new_text_width_and_height"
                                android:layout_height="@dimen/new_text_width_and_height"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/text_background_color"
                                android:gravity="center"
                                android:text="2"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/new_text_picture_size"
                                app:layout_auto_baseheight="width"/>

                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>