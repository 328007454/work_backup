<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="">

    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:app="http://schemas.android.com/apk/res-auto"
                 android:id="@+id/rl_photo_container"
                 android:layout_width="wrap_content"
                 android:layout_height="122px"
                 android:layout_marginLeft="@dimen/xs__30px"
                 android:background="#00000000"
                 android:orientation="horizontal">

        <TextView
            android:id="@+id/iv_device_part_name"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="21px"
            android:layout_marginTop="21px"
            android:background="@drawable/xs_light_blue_background_selector"
            android:gravity="center"
            android:minWidth="180px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:textColor="@color/xs_global_base_color"
            android:textSize="@dimen/xs_device_item_name_text_size_px"
            android:visibility="visible"
            app:layout_auto_baseheight="width"/>

        <TextView
            android:id="@+id/tv_device_part_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_device_part"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:textColor="@color/xs_global_text_color"
            android:textSize="@dimen/xs_device_item_name_text_size_px"
            android:visibility="gone"/>

        <!-- 设备部件上 显示该部件缺陷数量 -->

        <TextView
            android:id="@+id/tv_device_defect_count"
            android:layout_width="42px"
            android:layout_height="42px"
            android:layout_gravity="right"
            android:background="@drawable/xs_red_background_circle"
            android:gravity="center"
            android:text="22"
            android:textColor="@android:color/white"
            android:textSize="18px"
            android:visibility="visible"
            app:layout_auto_baseheight="width"/>
    </FrameLayout>
</layout>