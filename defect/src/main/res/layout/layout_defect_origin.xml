<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_green_title_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_strip_minheight"
            android:gravity="center"
            android:text="缺陷标准"
            android:textColor="@color/white"
            android:textSize="48px" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_defect_origin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btn_sure"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="118px"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/core_padding_30px"
            android:layout_marginLeft="@dimen/xs_global_padding_left_right_px"
            android:layout_marginRight="@dimen/xs_global_padding_left_right_px"
            android:layout_marginTop="@dimen/core_padding_30px"
            android:background="@drawable/xs_button_background_blue_selector"
            android:gravity="center"
            android:minHeight="@dimen/xs_button_minheight"
            android:text="自定义缺陷内容"
            android:textColor="@android:color/white"
            android:textSize="@dimen/xs_global_text_size_px" />

    </LinearLayout>
</layout>