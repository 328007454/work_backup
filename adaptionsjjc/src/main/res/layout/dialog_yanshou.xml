    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray_background_color"
        android:visibility="visible" />


    <!--动态添加布局 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_background_color">

        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2px"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone"></LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="2px">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="138px"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20px"
            android:gravity="center"
            android:text="问题说明"
            android:textColor="@color/global_text_color"
            android:textSize="@dimen/tv_text_size" />


        <EditText
            android:id="@+id/et_input_problem"
            android:layout_width="wrap_content"
            android:layout_height="138px"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="20px"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入"
            android:minWidth="@dimen/new_device_item_half_minwidth"
            android:textSize="@dimen/tv_text_size" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/linearlayout_rectangle_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button

            android:id="@+id/btn_cancle"
            style="@style/NewButtonStyle"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/global_padding_half_left_right"
            android:layout_marginRight="@dimen/global_padding_half_left_right"
            android:layout_weight="1"
            android:background="@drawable/red_button_background_selector"
            android:text="取消"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_finish"
            style="@style/NewButtonStyle"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/global_padding_half_left_right"
            android:layout_marginRight="@dimen/global_padding_half_left_right"
            android:layout_weight="1"
            android:background="@drawable/grass_green_button_background_selector"
            android:text="确认"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>
