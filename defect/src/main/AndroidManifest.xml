<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cnksi.defect">

    <application>
        <activity android:name="com.cnksi.common.activity.ImageDetailsActivity" />

        <activity
            android:name="com.cnksi.defect.activity.AddDefectActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <activity
            android:name="com.cnksi.defect.activity.OperateDefectActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name="com.cnksi.defect.activity.DefectControlActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateAlwaysHidden" />

    </application>
</manifest>
