<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">


        <com.cnksi.core.view.PagerSlidingTabStrip
            android:id="@+id/tab_strip"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:background="@color/tab_strip_background_color"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/add_task"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="118px"
            android:layout_gravity="center"
            android:layout_marginBottom="18px"
            android:layout_marginEnd="@dimen/sjjc_30px"
            android:layout_marginStart="@dimen/sjjc_30px"
            android:layout_marginTop="18px"
            android:background="@drawable/grass_green_button_background_selector"
            android:gravity="center"
            android:text="@string/add_new_task"
            android:textColor="@android:color/white"
            android:textSize="@dimen/global_text_size_px"/>

    </LinearLayout>
</layout>