<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/btn_radius" />
            <stroke android:width="2dp" android:color="#05b1a3" />
            <padding android:bottom="5dp" android:left="8dp" android:right="8dp" android:top="5dp" />
        </shape>
    </item>

    <item android:state_enabled="true" android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/btn_radius" />
            <stroke android:width="1dp" android:color="#C0BAB9" />
            <padding android:bottom="5dp" android:left="8dp" android:right="8dp" android:top="5dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/btn_radius" />
            <stroke android:width="1dp" android:color="#00FD5F54" />
            <padding android:bottom="5dp" android:left="8dp" android:right="8dp" android:top="5dp" />
        </shape>
    </item>

</selector>
