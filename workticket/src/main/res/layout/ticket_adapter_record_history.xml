<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="306px"
        android:background="@color/core_bg_white_ffffff"
        android:orientation="horizontal"

        android:paddingTop="40px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="306px"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/core_padding_30px"
            android:paddingRight="@dimen/core_padding_30px">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2015-1-1"
                android:textColor="#626262"
                android:textSize="@dimen/ticket_39px" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_bdz_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="2015-1-1"
                android:textColor="#C0BAB9"
                android:textSize="@dimen/ticket_33px" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_people_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/core_margin_10ox"
                android:text="2015-1-1"
                android:textColor="#C0BAB9"
                android:textSize="@dimen/ticket_33px" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_content_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="2015-1-1"
                android:textColor="#C0BAB9"
                android:textSize="@dimen/ticket_33px" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_status_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/core_padding_30px"
            android:paddingBottom="10px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="10px"
            android:text="已完成"
            android:textColor="#01CE7F"
            android:textSize="@dimen/ticket_33px" />

        <View

            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#c0bab9" />
    </RelativeLayout>
</layout>