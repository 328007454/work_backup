<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_root_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/include_title"
            layout="@layout/xs_include_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/xs_global_padding_left_right"
            android:paddingRight="@dimen/xs_global_padding_left_right"
            android:paddingTop="@dimen/xs_report_padding_top">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/xs_ic_report_exit" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/xs_global_padding_top_bottom"
                android:layout_marginTop="@dimen/xs_global_padding_half_left_right">

                <!--  -->

                <TextView
                    android:id="@+id/tv_report_generate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/xs_ic_report_generate"
                    android:drawablePadding="@dimen/xs_report_generate_drawable_padding"
                    android:gravity="center"
                    android:text="@string/xs_report_generating_str"
                    android:textColor="@color/xs_global_gray_text_color"
                    android:textSize="@dimen/xs_report_generate_text_size" />

                <LinearLayout
                    android:id="@+id/ll_report_content_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/xs_global_padding_top_bottom"
                    android:layout_marginTop="@dimen/xs_report_margin_top"
                    android:background="@drawable/xs_ic_report_background"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/xs_global_padding_half_left_right"
                    android:paddingRight="@dimen/xs_global_padding_half_left_right"
                    android:paddingTop="@dimen/xs_report_padding_top">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/xs_global_padding_left_right"
                        android:layout_marginRight="@dimen/xs_global_padding_left_right"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="@string/xs_work_start_time_str"
                            android:textColor="@color/xs_global_gray_text_color"
                            android:textSize="@dimen/xs_device_item_name_text_size" />

                        <TextView
                            android:id="@+id/tv_inspection_start_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="left|center_vertical"
                            android:textColor="@color/xs_green_color"
                            android:textSize="@dimen/xs_global_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/xs_global_padding_left_right"
                        android:layout_marginRight="@dimen/xs_global_padding_left_right"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="@string/xs_work_end_time_str"
                            android:textColor="@color/xs_global_gray_text_color"
                            android:textSize="@dimen/xs_device_item_name_text_size" />

                        <TextView
                            android:id="@+id/tv_inspection_end_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="left|center_vertical"
                            android:textColor="@color/xs_green_color"
                            android:textSize="@dimen/xs_global_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/xs_global_padding_left_right"
                        android:layout_marginRight="@dimen/xs_global_padding_left_right"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="@string/xs_work_department_str"
                            android:textColor="@color/xs_global_gray_text_color"
                            android:textSize="@dimen/xs_device_item_name_text_size" />

                        <TextView
                            android:id="@+id/tv_work_department"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="left|center_vertical"
                            android:text="乐山供电公司"
                            android:textColor="@color/xs_green_color"
                            android:textSize="@dimen/xs_global_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/xs_global_padding_left_right"
                        android:layout_marginRight="@dimen/xs_global_padding_left_right"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="@string/xs_work_group_str"
                            android:textColor="@color/xs_global_gray_text_color"
                            android:textSize="@dimen/xs_device_item_name_text_size" />

                        <TextView
                            android:id="@+id/tv_work_group"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="left|center_vertical"
                            android:textColor="@color/xs_green_color"
                            android:textSize="@dimen/xs_global_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/xs_global_padding_left_right"
                        android:layout_marginRight="@dimen/xs_global_padding_left_right"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="@string/xs_work_persons_str"
                            android:textColor="@color/xs_global_gray_text_color"
                            android:textSize="@dimen/xs_device_item_name_text_size" />

                        <TextView
                            android:id="@+id/tv_inspection_person"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="left|center_vertical"
                            android:textColor="@color/xs_green_color"
                            android:textSize="@dimen/xs_global_text_size" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_dash_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/xs_dot_line_height"
                        android:background="@drawable/xs_dotted_line_background" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/xs_inspection_result_str"
                        android:textColor="@color/xs_global_text_color"
                        android:textSize="@dimen/xs_global_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/xs_global_padding_left_right"
                        android:background="@color/xs_gray_background_color"
                        android:baselineAligned="false"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/xs_inspection_result_minheight"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/xs_global_padding_left_right"
                        android:paddingTop="@dimen/xs_global_padding_left_right">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/xs_global_padding_left_right"
                            android:layout_weight="1.2"
                            android:gravity="center_vertical|left"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_inspection_result"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left|center_vertical"
                                android:text="@string/xs_inspection_finish_status_str"
                                android:textColor="@color/xs_global_gray_text_color"
                                android:textSize="@dimen/xs_device_item_name_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/xs_global_padding_left_right"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_continue_inspection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:layout_marginRight="@dimen/xs_global_padding_left_right"
                                android:background="@drawable/xs_red_button_background_selector"
                                android:clickable="true"
                                android:drawableLeft="@drawable/xs_ic_continue_inspection"
                                android:drawablePadding="@dimen/xs_drawable_padding"
                                android:gravity="center"
                                android:paddingBottom="@dimen/xs_text_button_padding_top"
                                android:paddingLeft="@dimen/xs_text_button_padding_left"
                                android:paddingRight="@dimen/xs_text_button_padding_left"
                                android:paddingTop="@dimen/xs_text_button_padding_top"
                                android:text="@string/xs_continue_inspection_str"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/xs_device_item_name_text_size" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/xs_global_padding_left_right"
                        android:background="@color/xs_gray_background_color"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/xs_global_padding_left_right">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/xs_report_light_green_background_color"
                            android:gravity="center"
                            android:padding="@dimen/xs_text_button_padding_top"
                            android:text="@string/xs_remain_prolems_str"
                            android:textColor="@color/xs_report_light_green_text_color"
                            android:textSize="@dimen/xs_global_text_size" />

                        <TextView
                            android:id="@+id/tv_remain_problems"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/xs_global_padding_top_bottom"
                            android:textColor="@color/xs_global_gray_text_color"
                            android:textSize="@dimen/xs_global_text_size" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</layout>