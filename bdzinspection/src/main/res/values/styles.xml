    <style name="EditTextStyle">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:minHeight">@dimen/xs_edit_text_minheight</item>
        <item name="android:paddingLeft">@dimen/xs_global_padding_left_right</item>
