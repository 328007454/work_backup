<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_group_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="18px"
            android:paddingLeft="@dimen/xs_global_padding_left_right_px"
            android:paddingTop="18px"
            android:background="@color/color_edf6fc"
            android:textSize="33px" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/xs_line_half_width_px"
            android:background="@color/xs_line_color" />
    </LinearLayout>
</layout>