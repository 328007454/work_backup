<?xml version="1.0" encoding="utf-8"?>
<layout>

    <merge xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            style="@style/layout_gztz_title"
            android:text="累积跳闸次数："
            />

        <TextView
            android:id="@+id/ljtzcs_a"
            style="@style/layout_gztz_title"
            android:layout_width="wrap_content"
            android:layout_marginTop="3px"
            android:layout_weight="1"
            android:text="A"
            />

        <TextView
            android:id="@+id/ljtzcs_b"
            style="@style/layout_gztz_title"
            android:layout_width="wrap_content"
            android:layout_marginTop="3px"
            android:layout_weight="1"
            android:text="B"
            />

        <TextView
            android:id="@+id/ljtzcs_c"
            style="@style/layout_gztz_title"
            android:layout_width="wrap_content"
            android:layout_marginTop="3px"
            android:layout_weight="1"
            android:text="C"
            />

        <TextView
            android:id="@+id/ljtzcs_o"
            style="@style/layout_gztz_title"
            android:layout_width="wrap_content"
            android:layout_marginTop="3px"
            android:layout_weight="1"
            android:text="O"
            />

        <ImageView
            android:id="@+id/ljtzcs_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20px"
            android:layout_marginRight="@dimen/_30px"
            app:srcCompat="@drawable/ic_copy_hover"/>
    </merge>
</layout>