<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="">

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/color_edf6fc"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_group_item"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/circle_019bfb"
                android:drawablePadding="10px"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/xs_text_button_padding_top_px"
                android:paddingLeft="@dimen/xs_global_padding_left_right_px"
                android:paddingTop="@dimen/xs_text_button_padding_top_px"
                android:textColor="@color/color_019bfb"
                android:textSize="@dimen/txt_size36px" />

            <ImageView
                android:id="@+id/add_item"
                android:layout_width="65px"
                android:layout_height="65px"
                android:layout_marginRight="50px"
                android:background="@null"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_3to1"
                android:layout_width="65px"
                android:layout_height="65px"
                android:layout_marginRight="30px"
                android:background="@drawable/xs_icon_3_1" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lv_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>