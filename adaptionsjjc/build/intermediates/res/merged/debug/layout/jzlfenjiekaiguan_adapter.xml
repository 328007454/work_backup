<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/jzl_title_container"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="40px"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/jzl_report_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/jzl_title"
            android:layout_width="match_parent"
            android:layout_height="95px"
            android:background="@color/text_background"
            android:gravity="center_vertical|left"
            android:paddingLeft="20px"
            android:textColor="@color/radio_text_checked_color"
            android:textSize="@dimen/new_global_text_size"/>

        <LinearLayout
            android:id="@+id/ll_bcds_container"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:background="@color/white"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/copy_part_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:paddingLeft="20px"
                android:text="调整后档位"
                android:textColor="@color/global_text_color"
                android:textSize="@dimen/device_item_name_text_size"/>


            <TextView
                android:id="@+id/tv_put_bcds"
                style="@style/NewHeatPointEditTextStyle"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:focusable="true"
                android:gravity="center"
                android:paddingRight="30px"
                android:textSize="@dimen/device_item_name_text_size"
                android:visibility="visible"/>

        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@id/ll_container"
            android:background="@color/gray_background_color"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/ll_dzcs_container"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:background="@color/white"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/copy_part_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:paddingLeft="20px"
                android:text="动作次数"
                android:textColor="@color/global_text_color"
                android:textSize="@dimen/device_item_name_text_size"/>


            <TextView
                android:id="@+id/tv_put_dzcs"
                style="@style/NewHeatPointEditTextStyle"
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:focusable="true"
                android:paddingRight="30px"
                android:textSize="@dimen/device_item_name_text_size"
                android:visibility="visible"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cdbh_report_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cdbh_title"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="160px"
            android:gravity="center_vertical|left"
            android:paddingLeft="20px"
            android:textSize="@dimen/device_item_name_text_size"/>
        <TextView
            android:id="@+id/cdbh_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="160px"
            android:gravity="center"
            android:paddingRight="20px"
            android:textSize="@dimen/device_item_name_text_size"/>
        </LinearLayout>

</LinearLayout>
