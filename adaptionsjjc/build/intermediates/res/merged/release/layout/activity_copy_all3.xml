<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >


    <RelativeLayout
        android:id="@+id/rl_copy_all_value_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/copy_all_value_container_height"
        android:background="@color/gray_background_color" >

        <GridView
            android:id="@+id/gv_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/global_padding_left_right"
            android:layout_weight="1"
            android:cacheColorHint="@android:color/transparent"
            android:gravity="center"
            android:horizontalSpacing="@dimen/global_padding_left_right"
            android:listSelector="@android:color/transparent"
            android:numColumns="2"
            android:stretchMode="columnWidth"
            android:verticalSpacing="@dimen/grid_vertical_spacing" />

        <ImageButton
            android:id="@+id/ibtn_spread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/global_padding_left_right"
            android:background="@drawable/gray_button_background_selector"
            android:contentDescription="@null"
            android:padding="@dimen/twelve_oval_size"
            android:src="@mipmap/ic_amplify" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_eight_width"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_layout"
            android:layout_marginTop="10dp" >

            <LinearLayout
                android:id="@+id/copy_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/line_color"
                android:dividerHeight="@dimen/line_half_width"
                android:orientation="vertical"
                android:showDividers="middle" />
        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_keyboard_help_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_layout"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/global_padding_top_bottom"
            android:layout_marginLeft="@dimen/global_padding_left_right"
            android:layout_marginRight="@dimen/global_padding_left_right"
            android:layout_marginTop="@dimen/global_padding_top_bottom"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_pre"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/grass_green_button_background_selector"
                android:drawableLeft="@mipmap/ic_pre_page"
                android:gravity="center"
                android:minHeight="@dimen/button_minheight"
                android:paddingLeft="@dimen/global_padding_left_right"
                android:text="@string/pre"
                android:textColor="@android:color/white"
                android:textSize="@dimen/global_text_size" />

            <Button
                android:id="@+id/btn_next"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/global_padding_left_right"
                android:layout_weight="1"
                android:background="@drawable/grass_green_button_background_selector"
                android:drawableRight="@mipmap/ic_next_page"
                android:gravity="center"
                android:minHeight="@dimen/button_minheight"
                android:paddingRight="@dimen/global_padding_left_right"
                android:text="@string/next"
                android:textColor="@android:color/white"
                android:textSize="@dimen/global_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shadom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_layout"
            android:background="#80000000"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/shadom_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_text"
                android:textSize="@dimen/global_text_size" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>