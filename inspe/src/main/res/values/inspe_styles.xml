<resources>

    <!-- Base application theme.正式环境样式：Theme.AppCompat.Light.NoActionBar -->
    <style name="InspceAppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackgound</item>
    </style>

    <style name="DialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="InspceAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="InspceAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="InspceAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="View">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="View.TextView">
        <item name="android:textSize">16dip</item>
        <item name="android:textColor">#ff333333</item>
    </style>

    <style name="View.TextView.Content">
        <!--内容中的文本：值-->
        <item name="android:textSize">14dp</item>
    </style>

    <style name="View.TextView.Content.Name">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#1BBC9B</item>
    </style>

    <style name="View.TextView.Content.Value">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="View.LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="View.LinearLayout.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="View.LinearLayout.Item">
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="View.LinearLayout.Item.IssueDetail">
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingLeft">11dip</item>
        <item name="android:paddingRight">11dip</item>
        <item name="android:paddingBottom">11dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>


    <!--Button-->
    <style name="View.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!--ImageView-->
    <style name="View.ImageView"></style>

    <style name="View.ImageView.Thumbnail">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:src">@mipmap/inspe_ic_launcher</item>
    </style>

    <!--ScrollView-->
    <style name="View.ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!--RecyclerView-->
    <style name="View.RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!--EditView-->
    <style name="View.EditText">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="View.EditText.Number">
        <item name="android:inputType">number</item>
    </style>

    <style name="View.EditText.Text">
        <item name="android:inputType">text</item>
    </style>

</resources>
