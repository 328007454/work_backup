<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.cnksi.sjjc.view.UnderLineLinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="138px"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/sjjc_30px"
            app:drawUnderLine="true">

            <TextView
                style="@style/layout_gztz_title"
                android:text="保护原件类型"
                />

            <com.cnksi.common.view.ContainsEmojiEditText
                android:id="@+id/bhyjlx"
                style="@style/layout_gztz_num_input"
                android:layout_width="match_parent"
                android:layout_marginLeft="30px"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text=""
                />

            <ImageButton
                android:id="@+id/add"
                style="@style/svgButtonRight"
                android:layout_width="@dimen/title_bar_minheight_px"
                android:layout_height="@dimen/title_bar_minheight_px"
                android:background="@android:color/transparent"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:visibility="gone"
                app:srcCompat="@drawable/icon_indoor_add"/>

            <ImageButton
                android:id="@+id/delete"
                style="@style/svgButtonRight"
                android:layout_width="@dimen/title_bar_minheight_px"
                android:layout_height="@dimen/title_bar_minheight_px"
                android:background="@android:color/transparent"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:visibility="gone"
                app:srcCompat="@drawable/icon_indoor_delete"/>


        </com.cnksi.sjjc.view.UnderLineLinearLayout>

        <com.cnksi.sjjc.view.UnderLineLinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="138px"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/sjjc_30px"
            app:drawUnderLine="true">

            <TextView
                style="@style/layout_gztz_title"
                android:text="保护动作时间"
                />

            <com.cnksi.common.view.ContainsEmojiEditText
                android:id="@+id/bhdzsj"
                style="@style/layout_gztz_num_input"
                android:layout_width="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_weight="-1"
                android:inputType="number"
                android:gravity="center_vertical|left"
                android:text=""
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ms"/>
        </com.cnksi.sjjc.view.UnderLineLinearLayout>
    </LinearLayout>
</layout>