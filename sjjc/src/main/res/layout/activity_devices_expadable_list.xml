<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_root_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/global_base_color"
            android:gravity="center"
            app:navigationIcon="@drawable/cancel_button_background"
            app:title="选择一次设备"
            app:titleMarginStart="210px"
            app:titleTextColor="@android:color/white">


        </android.support.v7.widget.Toolbar>

        <ExpandableListView
            android:id="@+id/elv_container"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginTop="@dimen/eight_oval_size"
            android:layout_weight="1"
            android:cacheColorHint="@android:color/transparent"
            android:childDivider="@android:color/transparent"
            android:divider="@color/line_color"
            android:dividerHeight="@dimen/line_half_width"
            android:fadeScrollbars="true"
            android:fadingEdge="vertical"
            android:fastScrollEnabled="true"
            android:groupIndicator="@null"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none"/>

    </LinearLayout>
</layout>