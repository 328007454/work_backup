<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/refresh_background_color" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/refresh_header_padding"
        android:paddingTop="@dimen/refresh_header_padding" >

        <ImageView
            android:id="@+id/pull_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/refresh_progress_margin_left"
            android:background="@mipmap/ic_refresh_down_arrow"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/refreshing_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/refresh_progress_margin_left"
            android:background="@mipmap/ic_refreshing"
            android:contentDescription="@null"
            android:visibility="gone" />

        <TextView
            android:id="@+id/state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/pull_to_refresh"
            android:textColor="@color/refresh_text_color"
            android:textSize="@dimen/refresh_text_size" />

        <ImageView
            android:id="@+id/state_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/refresh_state_icon_margin_right"
            android:layout_toLeftOf="@id/state_tv"
            android:contentDescription="@null"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>