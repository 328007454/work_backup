<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_group_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_background_color"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/text_button_padding_top_px"
        android:paddingLeft="@dimen/global_padding_left_right_px"
        android:paddingTop="@dimen/text_button_padding_top_px"
        android:textColor="@color/green_color"
        android:textSize="@dimen/global_text_size_px" />

    <ImageView
        android:layout_width="match_parent"
        android:background="@color/line_color"
        android:layout_height="@dimen/line_half_width_px" />
</LinearLayout>