<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/include_inspe_title"
            layout="@layout/include_inspe_title" />

        <RelativeLayout
            android:id="@+id/rl_circle_picture"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_image_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/tv_picture_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/inspe_24px"
                android:textColor="@color/color_D9534F"
                android:textSize="@dimen/inspe_48px" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/inspe_24px">

            <Button
                android:id="@+id/btn_clear_mark"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/inspe_108px"
                android:layout_weight="1"
                android:background="@drawable/inspe_clear_mark_selector"
                android:minHeight="@dimen/inspe_108px"
                android:text="清除标记"
                android:textColor="@android:color/white"
                android:textSize="@dimen/inspe_48px" />

            <Button
                android:id="@+id/btn_add_mark"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/inspe_108px"
                android:layout_marginLeft="@dimen/inspe_24px"
                android:layout_marginRight="@dimen/inspe_24px"
                android:layout_weight="1"
                android:background="@drawable/inspe_add_mark_selector"
                android:minHeight="@dimen/inspe_108px"
                android:text="添加标记"
                android:textColor="@android:color/white"
                android:textSize="@dimen/inspe_48px" />

            <Button
                android:id="@+id/btn_save_mark"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/inspe_108px"
                android:layout_weight="1"
                android:background="@drawable/inspe_save_mark_selector"
                android:minHeight="@dimen/inspe_108px"
                android:text="确认"
                android:textColor="@android:color/white"
                android:textSize="@dimen/inspe_48px" />
        </LinearLayout>

    </LinearLayout>
</layout>