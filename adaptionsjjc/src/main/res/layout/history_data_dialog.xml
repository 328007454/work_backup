<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_record_defect_content_green_title_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_strip_minheight"
        android:gravity="center"
        android:text="@string/defect_content_str"
        android:textColor="@android:color/white"
        android:textSize="@dimen/global_text_size" />

    <HorizontalScrollView
        android:id="@+id/hsv_history_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/global_padding_left_right"
                android:background="@android:color/transparent"
                android:contentDescription="@null"
                android:src="@mipmap/test_historydata" />
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_padding_left_right"
        android:background="@drawable/grass_green_button_background_selector"
        android:gravity="center"
        android:minHeight="@dimen/button_minheight"
        android:text="@string/custom_defect_content_str"
        android:textColor="@android:color/white"
        android:textSize="@dimen/global_text_size" />

</LinearLayout>