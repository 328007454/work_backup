<?xml version="1.0" encoding="utf-8"?>
    <layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360px"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/xs_miaobian_gray_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="張三"
            android:textColor="@color/xs_global_base_color"
            android:textSize="@dimen/xs_global_text_small_size_px" />

        <ImageView
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xs_delete_standard_selector" />
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginBottom="18px"
        android:layout_marginLeft="18px"
        android:layout_marginRight="18px"
        android:orientation="vertical">

        <ImageView
            android:scaleType="centerInside"
            android:id="@+id/signImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/xs_ic_launcher"
            android:visibility="gone" />

        <LinearLayout

            android:id="@+id/ll_container_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/xs_green_button_background_selector"
            android:orientation="horizontal">

            <ImageView
                app:srcCompat="@drawable/xs_ic_sign"
                android:id="@+id/signImg_pic"
                android:layout_width="61px"
                android:layout_height="61px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="60px"
                android:scaleType="centerInside"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_czr_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18px"
                android:layout_marginRight="18px"
                android:drawablePadding="@dimen/xs_drawable_padding_px"
                android:gravity="left|center_vertical"
                android:minHeight="@dimen/xs_czp_sign_minheight_px"
                android:paddingRight="60px"
                android:text="@string/xs_gp_signname"
                android:textColor="@color/xs_white"
                android:textSize="@dimen/xs_global_text_small_size_px" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout></layout>
