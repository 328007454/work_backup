<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="16px"
            android:paddingRight="16px">

            <TextView
                android:id="@+id/tv_defect_degree_item"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/new_text_minheight"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/new_drawable_half_padding"
                android:gravity="center_vertical"
                android:textColor="@color/global_text_color"
                android:textSize="@dimen/new_global_text_size"/>

            <TextView
                android:id="@+id/tv_heat_device_item"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/new_text_minheight"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/new_drawable_half_padding"
                android:layout_toRightOf="@id/tv_defect_degree_item"
                android:gravity="center"
                android:textColor="@color/global_text_color"
                android:textSize="@dimen/new_global_text_size"
                />

            <TextView
                android:id="@+id/tv_editting_show"
                android:layout_width="@dimen/new_text_minwidth"
                android:layout_height="@dimen/new_edit_text_minheight"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/new_drawable_half_padding"
                android:layout_toRightOf="@id/tv_heat_device_item"
                android:background="@color/red_color"
                android:gravity="center"
                android:text="编辑中"
                android:textColor="@color/white"
                android:textSize="@dimen/new_global_text_size"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_temp_item"
                style="@style/NewTextViewStyle"
                android:drawablePadding="@dimen/new_drawable_half_padding"
                android:drawableRight="@mipmap/icon_arrow"
                android:gravity="center_vertical"
                android:textSize="36px"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/et_test_instrument"
                style="@style/NewHeatPointEditTextStyle"
                android:focusable="true"
                android:inputType="textMultiLine"
                android:paddingRight="60px"
                android:textSize="36px"
                android:visibility="gone"/>

        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@id/ll_container"
            android:background="@color/gray_background_color"
            android:visibility="gone"/>

    </RelativeLayout>
</layout>