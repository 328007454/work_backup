<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--按下-->
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#59b335" />
            <corners android:radius="@dimen/btn_radius" />
            <stroke android:width="@dimen/btn_border_width" android:color="#00FD5F54" />
            <size android:height="@dimen/btn_height" />
        </shape>
    </item>

    <!--默认-->
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#6AB74B" />
            <corners android:radius="@dimen/btn_radius" />
            <stroke android:width="@dimen/btn_border_width" android:color="#00FD5F54" />
            <size android:height="@dimen/btn_height" />
        </shape>
    </item>

    <!--不可用-->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_disable" />
            <corners android:radius="@dimen/btn_radius" />
            <stroke android:width="@dimen/btn_border_width" android:color="#00FD5F54" />
            <size android:height="@dimen/btn_height" />
        </shape>
    </item>


</selector>