        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintStart_toEndOf="@id/et_space_name"-->
        <!--app:layout_constraintTop_toTopOf="@id/name_title"-->
        <!---->

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_delete"
            android:layout_width="100px"
            android:layout_height="80px"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:background="@color/core_bg_white_ffffff"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/inspe_delete_icon" />

        <FrameLayout
            android:id="@+id/framelayout"
            android:layout_width="0px"
            android:layout_height="0px"
            android:background="@color/color_aa98a21"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>
</layout>
