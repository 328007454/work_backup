<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="svgButton">
        <item name="android:paddingBottom">37.5px</item>
        <item name="android:paddingTop">37.5px</item>
        <item name="android:paddingLeft">15px</item>
        <item name="android:paddingRight">15px</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="svgButtonBack">
        <item name="android:paddingBottom">35.5px</item>
        <item name="android:paddingTop">35.5px</item>
        <item name="android:paddingLeft">49.5px</item>
        <item name="android:paddingRight">49.5px</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="svgButtonAdd">
        <item name="android:padding">37.5px</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="RadioButtonBaseStyle">
        <item name="android:textColor">#f00</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">22px</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:button">@drawable/radio_button_selector</item>
        <item name="android:background">@null</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
</resources>
