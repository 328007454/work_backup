<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/textview_background_show"
        android:gravity="center"
        android:paddingLeft="@dimen/global_padding_half_left_right"
        android:paddingRight="@dimen/global_padding_half_left_right"
        android:text="验收结论"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <!-- 是否合格-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        android:paddingRight="20px">

        <TextView
            android:id="@+id/tv_pics"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="是否合格"
            android:textColor="@color/global_text_color"
            android:textSize="@dimen/tv_text_size" />

        <com.cnksi.sjjc.View.CustomRadioButton
            android:id="@+id/rb_yes"
            style="@style/RadioButtonBaseStyle"
            android:layout_width="wrap_content"
            android:layout_height="140px"
            android:layout_gravity="center_horizontal"
            android:button="@null"
            android:clickable="true"
            android:gravity="center_vertical"
            android:layout_marginRight="80dp"
            android:text="是"
            android:textSize="42px"
            app:drawableLeft="@drawable/radio_button_selector"
            app:drawableSize="48px" />

        <com.cnksi.sjjc.View.CustomRadioButton
            android:id="@+id/rb_no"
            style="@style/RadioButtonBaseStyle"
            android:layout_width="wrap_content"
            android:layout_height="140px"
            android:layout_gravity="center_horizontal"
            android:button="@null"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="否"
            android:textSize="42px"
            app:drawableLeft="@drawable/radio_button_selector"
            app:drawableSize="48px" />


