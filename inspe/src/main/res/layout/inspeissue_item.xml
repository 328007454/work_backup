<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="#FFFFFFFF"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/stateTxt"
        style="@style/View.TextView.Content.Name"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="12dp"
        android:text="未整改"
        android:textColor="@color/color_statetxe_green"
        android:textSize="14dp"
        android:textStyle="bold" />


    <LinearLayout
        style="@style/View.LinearLayout"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_toLeftOf="@id/stateTxt">

        <TextView
            android:id="@+id/contextTxt"
            style="@style/View.TextView"
            android:text="未按照发布单位有效技术b标准、规章制度清册的。"
            android:textColor="#626262"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/dateTxt"
            style="@style/View.TextView"
            android:layout_marginTop="8dp"
            android:text="整改日期：2018年1月1日"
            android:textColor="#C0BAB9"
            android:textSize="12dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackgound"
        android:visibility="gone" />
</RelativeLayout>