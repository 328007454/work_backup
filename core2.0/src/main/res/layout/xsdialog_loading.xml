<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/loading_dialog_background"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/xs_dialog_content_margin" >

    <ProgressBar
        android:id="@+id/progressBar1"
        style="@style/XS_LoadingProgressStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateDuration="800"
        android:background="@android:color/transparent" />

    <ImageView
        android:id="@+id/iv_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_map"
        android:contentDescription="@null"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/xs_dialog_content_margin"
        android:text="@string/xs_loading_data_str"
        android:textColor="@android:color/white"
        android:textSize="@dimen/xs_dialog_content_text_size" />

</LinearLayout>