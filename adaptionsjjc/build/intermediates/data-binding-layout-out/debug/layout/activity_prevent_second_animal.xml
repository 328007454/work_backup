<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/special_tips_background_color"
              android:orientation="vertical"
              tools:context=".activity.PreventAnimalSecondActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/global_margin_top"
        android:background="@color/gray_background_color"
        android:padding="@dimen/paddingRight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="检查结果"
            android:textColor="@color/wt_green_color"
            android:textSize="@dimen/global_text_small_size"/>
    </RelativeLayout>
    <!--开关柜孔洞 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="80px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/paddingRight"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="开关柜孔洞"
            android:textColor="@android:color/black"
            android:textSize="@dimen/global_text_small_size"/>

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/radio_switch"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:background="@null"
                android:id="@+id/switch_yes"
                style="@style/RadioButtonBaseStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:checked="true"
                android:button="@null"
                android:drawableLeft="@drawable/radio_button_selector"
                android:text="正常"
                android:textSize="@dimen/global_text_small_size"/>

            <RadioButton
                android:background="@null"
                android:id="@+id/switch_no"
                style="@style/RadioButtonBaseStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:button="@null"
                android:drawableLeft="@drawable/radio_button_selector"
                android:text="不正常"
                android:textSize="@dimen/global_text_small_size"/>
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray_background_color"
        />
    <!--室内孔洞 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@color/white"

        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="80px"
            android:layout_marginLeft="@dimen/paddingRight"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="室内孔洞"
            android:textColor="@android:color/black"
            android:textSize="@dimen/global_text_small_size"/>

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/radio_indoor"
            android:orientation="horizontal">

            <RadioButton
                android:background="@null"
                android:id="@+id/indoor_yes"
                style="@style/RadioButtonBaseStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/radio_button_selector"
                android:text="正常"
                android:textSize="@dimen/global_text_small_size"/>

            <RadioButton
                android:background="@null"
                android:id="@+id/indoor_no"
                style="@style/RadioButtonBaseStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:button="@null"
                android:drawableLeft="@drawable/radio_button_selector"
                android:text="不正常"
                android:textSize="@dimen/global_text_small_size"/>
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray_background_color"
        />
    <!--室外孔洞 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="80px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/paddingRight"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="室外孔洞"
            android:textColor="@android:color/black"
            android:textSize="@dimen/global_text_small_size"/>

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/radio_outdoor"
            android:orientation="horizontal">

            <RadioButton
                android:background="@null"
                android:id="@+id/outdoor_yes"
                style="@style/RadioButtonBaseStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/radio_button_selector"
                android:text="正常"
                android:textSize="@dimen/global_text_small_size"/>

            <RadioButton
                android:background="@null"
                android:id="@+id/outdoor_no"
                style="@style/RadioButtonBaseStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:button="@null"
                android:drawableLeft="@drawable/radio_button_selector"
                android:text="不正常"
                android:textSize="@dimen/global_text_small_size"/>
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray_background_color"
        />
    <!--门窗孔洞 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="80px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/paddingRight"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="门窗孔洞"
            android:textColor="@android:color/black"
            android:textSize="@dimen/global_text_small_size"/>

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/radio_window"
            android:orientation="horizontal">

            <RadioButton
                android:background="@null"
                android:id="@+id/window_yes"
                style="@style/RadioButtonBaseStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/radio_button_selector"
                android:text="正常"
                android:textSize="@dimen/global_text_small_size"/>

            <RadioButton
                android:background="@null"
                android:id="@+id/window_no"
                style="@style/RadioButtonBaseStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:button="@null"
                android:drawableLeft="@drawable/radio_button_selector"
                android:text="不正常"
                android:textSize="@dimen/global_text_small_size"/>
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray_background_color"
        />
    <!--鼠药器放置情况 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="80px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/paddingRight"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="鼠药器放置情况"
            android:textColor="@android:color/black"
            android:textSize="@dimen/global_text_small_size"/>

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/radio_ratsbane"
            android:orientation="horizontal">

            <RadioButton
                android:background="@null"
                android:id="@+id/ratsbane_yes"
                style="@style/RadioButtonBaseStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:checked="true"
                android:button="@null"
                android:drawableLeft="@drawable/radio_button_selector"
                android:text="正常"
                android:textSize="@dimen/global_text_small_size"/>

            <RadioButton
                android:background="@null"
                android:id="@+id/ratsbane_no"
                style="@style/RadioButtonBaseStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:button="@null"
                android:drawableLeft="@drawable/radio_button_selector"
                android:text="不正常"
                android:textSize="@dimen/global_text_small_size"/>
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray_background_color"
        />
    <!--投鼠器放置情况 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="80px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/paddingRight"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="投鼠器放置情况"
            android:textColor="@android:color/black"
            android:textSize="@dimen/global_text_small_size"/>

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/radio_mousetrap"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/mousetrap_yes"
                style="@style/RadioButtonBaseStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:button="@null"
                android:background="@null"
                android:checked="true"
                android:drawableLeft="@drawable/radio_button_selector"
                android:text="正常"
                android:textSize="@dimen/global_text_small_size"/>

            <RadioButton
                android:background="@null"
                android:id="@+id/mousetrap_no"
                style="@style/RadioButtonBaseStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:button="@null"
                android:drawableLeft="@drawable/radio_button_selector"
                android:text="不正常"
                android:textSize="@dimen/global_text_small_size"/>
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray_background_color"
        />
    <!--发现问题 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="140px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/paddingRight"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="发现问题地点"
            android:textColor="@android:color/black"
            android:textSize="@dimen/global_text_small_size"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_discover_position"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/paddingRight"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/wt_green_color"
            android:textSize="@dimen/global_text_small_size"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray_background_color"
        />
    <!--清除情况 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="140px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/paddingRight"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="清除情况"
            android:textColor="@android:color/black"
            android:textSize="@dimen/global_text_small_size"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_clear_position"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/paddingRight"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/wt_green_color"
            android:textSize="@dimen/global_text_small_size"/>
    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/device_photo_tips_minheight"
            android:layout_marginLeft="@dimen/global_padding_left_right"
            android:layout_marginRight="@dimen/global_padding_left_right"
            android:layout_marginTop="@dimen/global_padding_top_bottom"
            android:background="@drawable/red_button_background_selector"
            android:gravity="center"
            android:text="完成检查"
            android:textColor="@android:color/white"
            android:textSize="@dimen/global_text_size"/>
    </RelativeLayout>
</LinearLayout>