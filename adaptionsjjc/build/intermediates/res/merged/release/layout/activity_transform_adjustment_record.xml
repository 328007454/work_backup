<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:divider="@color/global_gray_text_color"
              android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/include_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="16px"
        android:paddingRight="16px">

        <TextView
            android:id="@+id/tv_first_transform_device"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/new_text_minheight"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/new_drawable_half_padding"
            android:gravity="center_vertical"
            android:text="发热程度"
            android:textColor="@color/global_text_color"
            android:textSize="@dimen/new_global_text_size"/>

        <EditText
            android:id="@+id/et_first_transform_input"
            style="@style/NewHeatPointEditTextStyle"
            android:focusable="true"
            android:inputType="textMultiLine"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="16px"
        android:paddingRight="16px">

        <TextView
            android:id="@+id/tv_second_transform_device"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/new_text_minheight"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/new_drawable_half_padding"
            android:gravity="center_vertical"
            android:text="发热程度"
            android:textColor="@color/global_text_color"
            android:textSize="@dimen/new_global_text_size"/>

        <EditText
            android:id="@+id/et_second_transform_input"
            style="@style/NewHeatPointEditTextStyle"
            android:focusable="true"
            android:inputType="textMultiLine"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/btn_confirm_save"
            style="@style/NewButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:background="@drawable/red_button_background_selector"
            android:text="@string/complete_test_record"/>
    </RelativeLayout>

</LinearLayout>