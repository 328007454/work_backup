<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/ll_dialog_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/xs_record_audio_dialog_background"
                    android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/xs_drawable_padding"
            android:drawableTop="@drawable/xs_ic_recording"
            android:gravity="center"
            android:text="@string/xs_recording_audio_str"
            android:textColor="@android:color/white"
            android:textSize="@dimen/xs_line_eight_widthinspection_time_text_size"/>

    </RelativeLayout>
</layout>