<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_background_color"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:minHeight="@dimen/register_title_minheight"
        android:text="@string/register_str"
        android:textColor="@color/register_content_text_color"
        android:textSize="@dimen/register_title_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_line_height"
        android:background="@color/register_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/register_margin_left"
        android:layout_marginRight="@dimen/register_margin_left"
        android:layout_marginTop="@dimen/register_button_margin_top"
        android:background="@drawable/register_content_background"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/register_content_minheight"
            android:orientation="horizontal"
            android:padding="@dimen/register_padding" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_number_str"
                android:textColor="@color/register_content_text_color"
                android:textSize="@dimen/register_content_text_size" />

            <TextView
                android:id="@id/tv_device_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_padding"
                android:textColor="@color/register_content_text_color"
                android:textSize="@dimen/register_content_text_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_line_height"
            android:background="@color/register_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/register_content_minheight"
            android:orientation="horizontal"
            android:padding="@dimen/register_padding" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_code_str"
                android:textColor="@color/register_content_text_color"
                android:textSize="@dimen/register_content_text_size" />

            <com.cnksi.core.view.ClearEditText
                android:id="@id/et_register_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_padding"
                android:background="@null"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLIMNOPQRSTUVWXYZ"
                android:hint="@string/please_input_register_code_str"
                android:inputType="textCapWords"
                android:maxLength="19"
                android:textColor="@color/register_content_text_color"
                android:textSize="@dimen/register_content_text_size" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/register_button_margin_bottom"
        android:layout_marginLeft="@dimen/register_margin_left"
        android:layout_marginRight="@dimen/register_margin_left"
        android:layout_marginTop="@dimen/register_button_margin_top"
        android:background="@drawable/register_button_background"
        android:minHeight="@dimen/register_button_minheight"
        android:text="@string/register_str"
        android:textColor="@android:color/white"
        android:textSize="@dimen/register_content_text_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/register_margin_left"
        android:layout_marginRight="@dimen/register_margin_left" >

        <TextView
            android:id="@+id/tv_register_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/register_padding"
            android:layout_marginRight="@dimen/register_padding"
            android:text="@string/register_way_str"
            android:textColor="@color/register_line_color"
            android:textSize="@dimen/register_content_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_line_height"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/tv_register_way"
            android:background="@color/register_line_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_line_height"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/tv_register_way"
            android:background="@color/register_line_color" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/register_button_margin_top"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ibtn_message_register"
                android:layout_width="@dimen/register_circle_diameter"
                android:layout_height="@dimen/register_circle_diameter"
                android:background="@drawable/message_register_bacground_selector"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/register_padding"
                android:text="@string/message_register_str"
                android:textSize="@dimen/register_way_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ibtn_phone_register"
                android:layout_width="@dimen/register_circle_diameter"
                android:layout_height="@dimen/register_circle_diameter"
                android:background="@drawable/phone_register_bacground_selector"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/register_padding"
                android:text="@string/phone_register_str"
                android:textSize="@dimen/register_way_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ibtn_email_register"
                android:layout_width="@dimen/register_circle_diameter"
                android:layout_height="@dimen/register_circle_diameter"
                android:background="@drawable/email_register_bacground_selector"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/register_padding"
                android:text="@string/email_register_str"
                android:textSize="@dimen/register_way_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>