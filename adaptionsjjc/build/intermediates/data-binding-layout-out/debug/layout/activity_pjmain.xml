<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cnksi.sjjc.activity.PJMainActivity">

    <com.cnksi.core.view.PagerSlidingTabStrip
        android:id="@+id/tab_strip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_strip_minheight"
        android:background="@color/tab_strip_background_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_padding_left_right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/global_padding_half_left_right"
            android:layout_weight="1"
            android:background="@drawable/red_button_background_selector"
            android:gravity="center"
            android:minHeight="@dimen/button_minheight"
            android:text="@string/dialog_cancel_text_str"
            android:textColor="@android:color/white"
            android:textSize="@dimen/global_text_size" />

        <Button
            android:id="@+id/btn_confirm"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/global_padding_half_left_right"
            android:layout_weight="1"
            android:background="@drawable/grass_green_button_background_selector"
            android:gravity="center"
            android:minHeight="@dimen/button_minheight"
            android:text="@string/save_str"
            android:textColor="@android:color/white"
            android:textSize="@dimen/global_text_size" />
    </LinearLayout>

</LinearLayout>
