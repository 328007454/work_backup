<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/jzl_title_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/special_tips_background_color">

    <TextView
        android:layout_marginTop="40px"
        android:id="@+id/jzl_title"
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:background="@color/text_background"
        android:gravity="center_vertical|left"
        android:paddingLeft="20px"
        android:text="基本信息"
        android:textColor="@color/radio_text_checked_color"
        android:textSize="@dimen/new_global_text_size"/>

    <LinearLayout
        android:id="@+id/ll_bcds_container"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:background="@color/white"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/copy_part_one"
            android:paddingLeft="20px"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="调整后档位"
            android:gravity="center_vertical"
            android:textColor="@color/global_text_color"
            android:textSize="@dimen/global_text_size"/>


        <EditText
            android:id="@+id/et_put_bcds"
            style="@style/NewHeatPointEditTextStyle"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:focusable="true"
            android:inputType="numberSigned|numberDecimal"
            android:paddingRight="30px"
            android:textSize="@dimen/global_text_size"
            android:visibility="visible"/>

    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@id/ll_container"
        android:background="@color/gray_background_color"
        android:visibility="visible"/>
    <LinearLayout
        android:id="@+id/ll_dongzuo_container"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:background="@color/white"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/copy_part_two"
            android:paddingLeft="20px"
            android:text="动作次数"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="@color/global_text_color"
            android:textSize="@dimen/global_text_size"/>


        <EditText
            android:id="@+id/et_put_dzcs"
            style="@style/NewHeatPointEditTextStyle"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:focusable="true"
            android:inputType="numberSigned|numberDecimal"
            android:paddingRight="30px"
            android:textSize="@dimen/global_text_size"
            android:visibility="visible"/>

    </LinearLayout>

</LinearLayout>
