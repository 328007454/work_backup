<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class=""></data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/inspe_green_back_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="135px"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/tips_str"
            android:textColor="@android:color/white"
            android:textSize="@dimen/inspe_48px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/core_bg_white_ffffff"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/ll_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_add_device"
                    style="@style/View.Button"
                    android:layout_width="0px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/inspe_btn_red_selector"
                    android:text="" />

                <Button
                    android:id="@+id/btn_finish"
                    style="@style/View.Button"
                    android:layout_width="0px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/inspe_btn_green_selector"
                    android:text="" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</layout>