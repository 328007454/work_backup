<?xml version="1.0" encoding="utf-8"?>
    <layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItemStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/xs_green_circle_background"
        android:gravity="center"
        android:minHeight="@dimen/xs_operate_item_number_minheight"
        android:minWidth="@dimen/xs_operate_item_number_minheight"
        android:textColor="@android:color/white"
        android:textSize="@dimen/xs_global_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/xs_global_padding_left_right"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_time_spend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/xs_grass_green_button_background_selector"
                android:paddingLeft="@dimen/xs_global_padding_left_right"
                android:paddingRight="@dimen/xs_global_padding_left_right"
                android:text="@string/xs_czp_time_spend_str"
                android:textColor="@android:color/white"
                android:textSize="@dimen/xs_global_text_small_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_time_spend"
                android:textSize="@dimen/xs_global_text_size" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_complete_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/xs_global_gray_text_color"
            android:textSize="@dimen/xs_global_text_small_size"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout></layout>