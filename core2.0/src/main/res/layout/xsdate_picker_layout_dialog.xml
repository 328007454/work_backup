<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/xs_dialog_divider_margin_top" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/xs_dialog_content_margin_px"
        android:layout_marginRight="@dimen/xs_dialog_content_margin_px"
        android:background="@drawable/core_dialog_background"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/xs_dialog_button_minheight_px"
            android:text="@string/xs_select_time_str"
            android:textColor="@color/xs_dialog_title_text_color"
            android:textSize="@dimen/xs_dialog_title_text_size_px" />

        <LinearLayout
            android:id="@+id/ll_date_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/xs_dialog_content_margin_px"
            android:paddingRight="@dimen/xs_dialog_content_margin_px" />

        <TextView
            android:id="@+id/divider_line"
            style="@style/XS_Divider_horizontal"
            android:layout_marginTop="@dimen/xs_dialog_divider_margin_top_px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dialog_left_button_background_selector"
                android:clickable="true"
                android:gravity="center"
                android:minHeight="@dimen/xs_dialog_button_minheight_px"
                android:text="@string/xs_dialog_cancel_text_str"
                android:textColor="@color/xs_dialog_cancel_button_text_color"
                android:textSize="@dimen/xs_dialog_button_text_size_px" />

            <TextView
                android:id="@+id/divider"
                style="@style/XS_Divider_vertical"
                android:visibility="visible" />

            <TextView
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dialog_right_button_background_selector"
                android:clickable="true"
                android:gravity="center"
                android:minHeight="@dimen/xs_dialog_button_minheight_px"
                android:text="@string/xs_dialog_confirm_text_str"
                android:textColor="@color/xs_dialog_confirm_button_text_color"
                android:textSize="@dimen/xs_dialog_button_text_size_px" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>