<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xs_yw_white_background"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/xs_yw_adapter_margin"
            android:layout_weight="1"
            android:textColor="@color/xs_global_base_color"
            android:textSize="@dimen/xs_global_text_size" />

        <LinearLayout
            android:id="@+id/llck"
            android:layout_width="@dimen/xs_yw_checkbox_w"
            android:layout_height="@dimen/xs_yw_checkbox_w"
            android:gravity="center">

            <CheckBox
                android:id="@+id/check"
                android:layout_width="@dimen/xs_yw_checkbox_s"
                android:layout_height="@dimen/xs_yw_checkbox_s"
                android:layout_gravity="center"
                android:background="@drawable/xs_checkbox_gray_blue_selector"
                android:button="@null"
                android:clickable="false"
                android:padding="@dimen/xs_yw_adapter_margin" />
        </LinearLayout>
    </LinearLayout>
</layout>