<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"><shape>
            <solid android:color="@android:color/white" />

            <corners android:radius="@dimen/xs_half_corner_radius" />

            <stroke android:width="@dimen/xs_line_eight_width" android:color="@color/xs_red_color" />
        </shape></item>
    <item android:state_focused="false"><shape>
            <solid android:color="@android:color/white" />

            <corners android:radius="@dimen/xs_half_corner_radius" />

            <stroke android:width="@dimen/xs_line_eight_width" android:color="@color/xs_line_color" />
        </shape></item>

</selector>