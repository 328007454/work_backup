<?xml version="1.0" encoding="utf-8"?>
                                                                   

                                           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fragment_record_defect_content_green_title_background"
        android:orientation="vertical" android:tag="layout/permission_dialog_tips_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_strip_minheight"
            android:gravity="center"
            android:text="@string/tips_str"
            android:textColor="@android:color/white"
            android:textSize="@dimen/global_text_size" />

        <TextView
            android:id="@+id/tv_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:minHeight="@dimen/tab_strip_minheight"
            android:padding="@dimen/global_padding_left_right"
            android:text="@string/dialog_tips_content_str"
            android:textColor="@color/deep_grey"
            android:textSize="@dimen/global_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_eight_width"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/global_padding_top_bottom"
            android:layout_marginTop="@dimen/global_padding_top_bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="360px"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_weight="1"
                android:background="@drawable/red_button_background_selector"
                android:gravity="center"
                android:text="@string/dialog_cancle_str"
                android:textColor="@android:color/white"
                android:textSize="@dimen/global_text_size" />

            <Button
                android:id="@+id/btn_sure"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="360px"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_weight="1"
                android:background="@drawable/grass_green_button_background_selector"
                android:gravity="center"
                android:text="@string/dialog_sure_str"
                android:textColor="@android:color/white"
                android:textSize="@dimen/global_text_size" />
        </LinearLayout>

    </LinearLayout>
         