<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_information_show"
              android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/textview_background_show"
                android:gravity="center"
                android:paddingLeft="@dimen/global_padding_half_left_right"
                android:paddingRight="@dimen/global_padding_half_left_right"
                android:text="11111111111"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_check_method"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#DDE7E9"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/global_padding_half_left_right"
                android:paddingRight="@dimen/global_padding_half_left_right"
                android:text="检查方式"/>

            <TextView
                android:id="@+id/tv_check_method_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/textview_minheight"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/global_padding_half_left_right"
                android:paddingRight="@dimen/global_padding_half_left_right"
                android:text="11111111111"/>

            <TextView
                android:id="@+id/tv_yanshou_standard"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#DDE7E9"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/global_padding_half_left_right"
                android:paddingRight="@dimen/global_padding_half_left_right"
                android:text="验收标准"/>

            <TextView
                android:id="@+id/tv_yanshou_standard_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="52dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/global_padding_half_left_right"
                android:paddingRight="@dimen/global_padding_half_left_right"
                android:text="11111111111"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/linearlayout_rectangle_background"
                >

                <Button
                    android:id="@+id/btn_finish"
                    style="@style/NewButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/global_padding_half_left_right"
                    android:layout_marginLeft="@dimen/global_padding_half_left_right"
                    android:layout_marginRight="@dimen/global_padding_half_left_right"
                    android:background="@drawable/red_button_background_selector"
                    android:text="确认"
                    android:visibility="visible"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
