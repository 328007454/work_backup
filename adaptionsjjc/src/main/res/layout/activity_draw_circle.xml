<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_circle_picture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/ll_image_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/tv_picture_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/global_padding_left_right_px"
            android:textColor="@color/red_color"
            android:textSize="@dimen/global_text_size_px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/global_padding_left_right_px" >

        <Button
            android:id="@+id/btn_clear_mark"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_minheight_px"
            android:layout_weight="1"
            android:background="@drawable/clear_mark_background_selector"
            android:minHeight="@dimen/button_minheight_px"
            android:text="@string/clear_all_mark_str"
            android:textColor="@android:color/white"
            android:textSize="@dimen/global_text_size_px" />

        <Button
            android:id="@+id/btn_add_mark"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_minheight_px"
            android:layout_marginLeft="@dimen/global_padding_left_right_px"
            android:layout_marginRight="@dimen/global_padding_left_right_px"
            android:layout_weight="1"
            android:background="@drawable/add_mark_background_selector"
            android:minHeight="@dimen/button_minheight_px"
            android:text="@string/add_mark_str"
            android:textColor="@android:color/white"
            android:textSize="@dimen/global_text_size_px" />

        <Button
            android:id="@+id/btn_save_mark"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_minheight_px"
            android:layout_weight="1"
            android:background="@drawable/save_mark_background_selector"
            android:minHeight="@dimen/button_minheight_px"
            android:text="@string/confirm_str"
            android:textColor="@android:color/white"
            android:textSize="@dimen/global_text_size_px" />
    </LinearLayout>

</LinearLayout>