<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="BluetoothBinding"></data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xs_diaglog_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_bluttooth_state"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/xs_global_base_color"
            android:gravity="center"
            android:text="蓝牙未连接"
            android:textColor="@color/xs_white"
            android:textSize="@dimen/xs_global_text_size" />

        <TextView
            android:id="@+id/txt_file_name"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:layout_marginTop="30px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:text="文件名称："
            android:textColor="@color/xs_global_base_color"
            android:textSize="@dimen/xs_global_text_size" />

        <com.cnksi.bdzinspection.view.FileProgressBar
            android:id="@+id/recive_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="30px"
            android:max="100"
            android:progressDrawable="@drawable/xs_progress_bar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/xs_global_gray_text_color" />

        <ListView
            android:id="@+id/lv_ddevice"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@color/xs_line_color"
            android:dividerHeight="@dimen/xs_line_half_width"
            android:listSelector="@android:color/transparent" />
    </LinearLayout>
</layout>