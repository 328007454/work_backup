<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="270dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/textview_background_show"
            android:gravity="center"
            android:paddingLeft="@dimen/global_padding_half_left_right"
            android:paddingRight="@dimen/global_padding_half_left_right"
            android:text="验收成果记录"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <!-- 拍照-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:paddingRight="20px">

            <TextView
                android:id="@+id/tv_pics"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="拍照"
                android:textColor="@color/global_text_color"
                android:textSize="@dimen/tv_text_size"/>

            <ImageView
                android:id="@+id/iv_show_take_picture"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="88px"
                android:layout_toRightOf="@+id/tv_pics"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_pic_num"
                android:layout_width="@dimen/new_text_width_and_height"
                android:layout_height="@dimen/new_text_width_and_height"
                android:layout_alignRight="@id/iv_show_take_picture"
                android:layout_alignTop="@id/iv_show_take_picture"
                android:background="@drawable/text_background_color"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/new_text_picture_size"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/ibtn_take_picture"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:background="@android:color/transparent"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/camera_button_background"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@id/et_input"
            android:background="@color/gray_background_color"
            android:visibility="visible"/>

        <!--录音-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:paddingRight="20px">

            <TextView

                android:id="@+id/tv_qm_tips"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="录音"
                android:textColor="@color/global_text_color"
                android:textSize="@dimen/tv_text_size"/>

            <TextView
                android:id="@+id/tv_audio"
                android:layout_width="@dimen/yw_audio_w"
                android:layout_height="@dimen/yw_audio_h"
                android:layout_marginLeft="88px"
                android:background="@drawable/grass_green_button_background_selector"
                android:drawableLeft="@mipmap/ic_audio"
                android:gravity="center"
                android:paddingLeft="@dimen/global_padding_top_bottom"
                android:textColor="@android:color/white"
                android:textSize="@dimen/audio_length_text_size"
                android:visibility="gone"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/img_record"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_marginLeft="@dimen/app_main_padding"
                android:src="@mipmap/icon_record"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@id/et_input"
            android:background="@color/gray_background_color"
            android:visibility="visible"/>

        <!--录像-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:paddingRight="20px">

            <TextView
                android:id="@+id/tv_lxtips"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="录像"
                android:textColor="@color/global_text_color"
                android:textSize="@dimen/tv_text_size"/>

            <RelativeLayout
                android:id="@+id/re_container"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="88px"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_video"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_yellow_unfinish"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="32px"
                    android:layout_alignBottom="@+id/img_video"
                    android:layout_alignLeft="@+id/img_video"
                    android:background="#80DDE9E7"
                    android:padding="2px">

                    <ImageView
                        android:id="@+id/iv_video_biaozhi"
                        android:layout_width="28px"
                        android:layout_height="26px"
                        android:scaleType="fitXY"
                        android:src="@mipmap/icon_luxiang"
                        tools:ignore="ContentDescription" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white_text"
                        android:textSize="25px"/>
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/img_lx"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_marginLeft="@dimen/app_main_padding"
                android:src="@mipmap/icon_video"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/linearlayout_rectangle_background"
            android:gravity="bottom"

            >

            <Button
                android:id="@+id/btn_finish"
                style="@style/NewButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="@dimen/global_padding_half_left_right"
                android:layout_marginRight="@dimen/global_padding_half_left_right"
                android:background="@drawable/grass_green_button_background_selector"
                android:text="确认"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
