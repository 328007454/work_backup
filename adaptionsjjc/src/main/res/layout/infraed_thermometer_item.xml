<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/ll_container"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:gravity="center"
        android:paddingLeft="16px">

        <TextView
            android:id="@+id/tv_defect_degree_item"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/new_drawable_half_padding"
            android:gravity="center_vertical"
            android:textColor="@color/global_text_color"
            android:textSize="@dimen/global_text_size_1"/>




        <EditText
            android:id="@+id/et_test_instrument"
            style="@style/NewHeatPointEditTextStyle"
            android:focusable="true"
            android:paddingRight="30px"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:textSize="@dimen/global_text_size_1"
            android:visibility="visible"
            android:inputType="numberDecimal"/>

    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_below="@id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray_background_color"
        android:visibility="gone"/>

</RelativeLayout>
