<?xml version="1.0" encoding="utf-8"?>
<layout>


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_minheight_px"
                android:background="@color/global_base_color">


                <ImageButton
                    android:id="@+id/btn_right"
                    style="@style/svgButtonRight"
                    android:layout_width="@dimen/title_bar_minheight_px"
                    android:layout_height="@dimen/title_bar_minheight_px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:visibility="gone"
                    app:srcCompat="@drawable/cancel_button_background" />


                <TextView
                    android:id="@+id/tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/global_padding_left_right_px"
                    android:background="@drawable/textview_grass_conner"
                    android:paddingBottom="20px"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:paddingTop="20px"
                    android:text="完成记录"
                    android:textColor="@color/white_text"
                    android:textSize="@dimen/global_text_small_size_px"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/btn_back"
                    style="@style/svgButtonBack"
                    android:layout_width="@dimen/title_bar_minheight_px"
                    android:layout_height="@dimen/title_bar_minheight_px"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/transparent"
                    android:contentDescription="@null"
                    android:visibility="visible"
                    app:srcCompat="@drawable/cancel_button_background" />



                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="SF6气体压力检测记录"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/et_hint_text_size_px" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/root_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />

        </LinearLayout>



</layout>