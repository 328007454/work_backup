<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/contaner_first_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_task_item_background_color">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_device"
                style="@style/layout_gztz_title"
                android:layout_marginTop="20px"
                android:text="设备名称"
                app:layout_constraintEnd_toStartOf="@+id/txt_select_device"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_select_device"
                style="@style/layout_gztz_input"
                android:drawableRight="@drawable/ic_arrow_right"
                android:hint="请点击此处跳转选择"
                android:onClick="onClick"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_device"
                app:layout_constraintTop_toTopOf="@+id/txt_device"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_device_type"
                style="@style/layout_gztz_title"
                android:layout_marginTop="3px"
                android:text="设备相别"
                app:layout_constraintTop_toBottomOf="@+id/txt_select_device"/>

            <com.zhy.autolayout.AutoRadioGroup
                android:id="@+id/rdg_device_type"
                style="@style/layout_gztz_radiogroup"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/txt_device_type"
                app:layout_constraintTop_toTopOf="@id/txt_device_type"
                >

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_a"
                    style="@style/layout_gztz_radiobutton"
                    android:checked="true"
                    android:text="A"
                    />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_b"
                    style="@style/layout_gztz_radiobutton"
                    android:text="B"
                    app:layout_constraintTop_toBottomOf="@+id/txt_baseinfo"/>

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_c"
                    style="@style/layout_gztz_radiobutton"
                    android:text="C"
                    app:layout_constraintTop_toBottomOf="@+id/txt_baseinfo"/>

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_o"
                    style="@style/layout_gztz_radiobutton"
                    android:text="O"
                    app:layout_constraintTop_toBottomOf="@+id/txt_baseinfo"/>
            </com.zhy.autolayout.AutoRadioGroup>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_device_action"
                style="@style/layout_gztz_title"
                android:layout_marginTop="3px"
                android:text="是否动作"
                app:layout_constraintTop_toBottomOf="@+id/txt_device_type"/>

            <com.zhy.autolayout.AutoRadioGroup
                android:id="@+id/rdg_action_yn"
                style="@style/layout_gztz_radiogroup"
                android:weightSum="4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/txt_device_action"
                app:layout_constraintTop_toTopOf="@id/txt_device_action"
                >

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/ac_action_y"
                    style="@style/layout_gztz_radiobutton"
                    android:checked="true"
                    android:text="是"
                    />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/cb_action_no"
                    style="@style/layout_gztz_radiobutton"
                    android:text="否"
                    app:layout_constraintTop_toBottomOf="@+id/txt_baseinfo"/>
            </com.zhy.autolayout.AutoRadioGroup>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_action_judge"
                style="@style/layout_gztz_title"
                android:layout_marginTop="3px"
                android:text="动作评价"
                app:layout_constraintTop_toBottomOf="@+id/txt_device_action"/>

            <com.zhy.autolayout.AutoRadioGroup
                android:id="@+id/rdg_action_judge"
                style="@style/layout_gztz_radiogroup"
                android:weightSum="4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/txt_action_judge"
                app:layout_constraintTop_toTopOf="@id/txt_action_judge"
                >

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/ac_action_"
                    style="@style/layout_gztz_radiobutton"
                    android:checked="true"
                    android:text="正动"
                    />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/cb_action_"
                    style="@style/layout_gztz_radiobutton"
                    android:text="误动"
                    app:layout_constraintTop_toBottomOf="@+id/txt_baseinfo"/>
            </com.zhy.autolayout.AutoRadioGroup>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_action_infor"
                style="@style/layout_gztz_title"
                android:layout_width="wrap_content"
                android:layout_marginTop="3px"
                android:text="重合闸动作情况"
                app:layout_constraintEnd_toStartOf="@+id/txt_action_infor_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_action_judge"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_action_infor_input"
                style="@style/layout_gztz_input"
                android:drawableRight="@drawable/ic_arrow_right"
                android:hint="点击选择"
                android:onClick="onClick"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_action_infor"
                app:layout_constraintTop_toTopOf="@+id/txt_action_infor"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_device_type_num"
                style="@style/layout_gztz_title"
                android:layout_width="wrap_content"
                android:layout_marginTop="3px"
                android:text="各项跳闸次数"
                app:layout_constraintEnd_toStartOf="@+id/container_tz_num"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_action_infor"
                />

            <LinearLayout
                android:id="@+id/container_tz_num"
                android:layout_width="0px"
                android:layout_height="138px"
                android:background="@color/white"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_device_type_num"
                app:layout_constraintTop_toTopOf="@+id/txt_device_type_num">]

                <include
                    android:id="@+id/include_num"
                    layout="@layout/layout_include_tz"/>
            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_gzdl"
                style="@style/layout_gztz_title"
                android:layout_width="wrap_content"
                android:layout_marginTop="3px"
                android:text="故障跳闸电流（kA）"
                app:layout_constraintEnd_toStartOf="@+id/et_gzdl_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_device_type_num"
                />

            <com.cnksi.sjjc.View.ContainsEmojiEditText
                android:id="@+id/et_gzdl_input"
                style="@style/NewHeatPointEditTextStyle"
                android:layout_width="0px"
                android:layout_height="138px"
                android:background="@color/white"
                android:gravity="right|center_vertical"
                android:hint="请输入"
                android:inputType="numberDecimal"
                android:paddingRight="@dimen/_30px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_gzdl"
                app:layout_constraintTop_toTopOf="@+id/txt_gzdl"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_second_gzdl"
                style="@style/layout_gztz_title"
                android:layout_width="wrap_content"
                android:layout_marginTop="3px"
                android:text="而此故障电流（A）"
                app:layout_constraintEnd_toStartOf="@+id/et_second_gzdl_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_gzdl"
                />

            <com.cnksi.sjjc.View.ContainsEmojiEditText
                android:id="@+id/et_second_gzdl_input"
                style="@style/NewHeatPointEditTextStyle"
                android:layout_width="0px"
                android:layout_height="138px"
                android:background="@color/white"
                android:gravity="right|center_vertical"
                android:hint="请输入"
                android:inputType="numberDecimal"
                android:paddingRight="@dimen/_30px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_second_gzdl"
                app:layout_constraintTop_toTopOf="@+id/txt_second_gzdl"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_recovery_ele_time"
                style="@style/layout_gztz_title"
                android:layout_width="wrap_content"
                android:layout_marginTop="3px"
                android:text="恢复送电时间"
                app:layout_constraintEnd_toStartOf="@+id/container_first_ele_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_second_gzdl"
                />

            <LinearLayout
                android:id="@+id/container_first_ele_time"
                android:layout_width="0px"
                android:layout_height="138px"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_recovery_ele_time"
                app:layout_constraintTop_toTopOf="@+id/txt_recovery_ele_time">

                <include
                    android:id="@+id/include_first_ele_time"
                    layout="@layout/layout_include_time"
                    />
            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_recovery_ele__second_time"
                style="@style/layout_gztz_title"
                android:layout_width="wrap_content"
                android:layout_marginTop="3px"
                android:text="最后一次大修时间"
                app:layout_constraintEnd_toStartOf="@+id/container_second_ele_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_recovery_ele_time"
                />

            <LinearLayout
                android:id="@+id/container_second_ele_time"
                android:layout_width="0px"
                android:layout_height="138px"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_recovery_ele__second_time"
                app:layout_constraintTop_toTopOf="@+id/txt_recovery_ele__second_time">

                <include
                    android:id="@+id/include_second_ele_time"
                    layout="@layout/layout_include_time"
                    />
            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_proctect_fit"
                style="@style/layout_gztz_title"
                android:layout_width="wrap_content"
                android:layout_marginTop="3px"
                android:text="保护装置型号"
                app:layout_constraintEnd_toStartOf="@+id/txt_proctect_type_select"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_recovery_ele__second_time"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_proctect_type_select"
                style="@style/layout_gztz_input"
                android:drawableRight="@drawable/ic_arrow_right"
                android:hint="点击选择"
                android:onClick="onClick"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_proctect_fit"
                app:layout_constraintTop_toTopOf="@+id/txt_proctect_fit"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_proctect_original"
                style="@style/layout_gztz_title"
                android:layout_width="wrap_content"
                android:layout_marginTop="3px"
                android:text="保护原件类型"
                app:layout_constraintEnd_toStartOf="@+id/txt_proctect_original_select"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_proctect_fit"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_proctect_original_select"
                style="@style/layout_gztz_input"
                android:drawableRight="@drawable/ic_arrow_right"
                android:hint="点击选择"
                android:onClick="onClick"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_proctect_original"
                app:layout_constraintTop_toTopOf="@+id/txt_proctect_original"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_start_time"
                style="@style/layout_gztz_title"
                android:layout_width="wrap_content"
                android:layout_marginTop="3px"
                android:text="启动时间"
                app:layout_constraintEnd_toStartOf="@+id/container_start_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_proctect_original"
                />

            <LinearLayout
                android:id="@+id/container_start_time"
                android:layout_width="0px"
                android:layout_height="138px"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_start_time"
                app:layout_constraintTop_toTopOf="@+id/txt_start_time">

                <include
                    android:id="@+id/include_start_time"
                    layout="@layout/layout_include_time"
                    />
            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_proctect_time"
                style="@style/layout_gztz_title"
                android:layout_width="wrap_content"
                android:layout_marginTop="3px"
                android:text="保护动作时间"
                app:layout_constraintEnd_toStartOf="@+id/container_proctect_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_start_time"
                />

            <LinearLayout
                android:id="@+id/container_proctect_time"
                android:layout_width="0px"
                android:layout_height="138px"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_proctect_time"
                app:layout_constraintTop_toTopOf="@+id/txt_proctect_time">

                <include
                    android:id="@+id/include_proctect_time"
                    layout="@layout/layout_include_time"
                    />
            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_protect_infor"
                style="@style/layout_gztz_title"
                android:layout_width="match_parent"
                android:layout_marginTop="3px"
                android:gravity="left|center_vertical"
                android:text="保护动作情况"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_proctect_time"
                />

            <LinearLayout
                android:id="@+id/container_protect_infor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_protect_infor">

                <com.cnksi.sjjc.View.ContainsEmojiEditText
                    android:id="@+id/et_protect_infor_input"
                    style="@style/layout_gztz_infor_input"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical|left"
                    android:paddingStart="@dimen/_30px"
                    android:text=""
                    />
            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_dlq_infor"
                style="@style/layout_gztz_title"
                android:layout_width="match_parent"
                android:layout_marginTop="3px"
                android:gravity="left|center_vertical"
                android:text="断路器检查情况"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/container_protect_infor"
                />

            <LinearLayout
                android:id="@+id/container_dlq_infor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_dlq_infor">

                <com.cnksi.sjjc.View.ContainsEmojiEditText
                    android:id="@+id/et_dlq_infor_input"
                    style="@style/layout_gztz_infor_input"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical|left"
                    android:paddingStart="@dimen/_30px"
                    android:text=""
                    />
            </LinearLayout>


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_remark"
                style="@style/layout_gztz_title"
                android:layout_width="match_parent"
                android:layout_marginTop="3px"
                android:gravity="left|center_vertical"
                android:text="备注"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/container_dlq_infor"
                />

            <LinearLayout
                android:id="@+id/container_remark_infor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_remark">

                <com.cnksi.sjjc.View.ContainsEmojiEditText
                    android:id="@+id/et_remark_infor_input"
                    style="@style/layout_gztz_infor_input"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical|left"
                    android:paddingStart="@dimen/_30px"
                    android:text=""
                    />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <!-- 下一页 -->

    </android.support.constraint.ConstraintLayout>
</ScrollView>