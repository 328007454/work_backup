<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2px"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/tv_jichu_name"

            android:layout_width="wrap_content"
            android:layout_height="138px"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/hwcw_line_height"
            android:textColor="@color/global_text_color"
            android:textSize="@dimen/yw_title_gqj_size"/>

        <EditText
            android:id="@+id/et_input_jichu_part"
            style="@style/NewHeatPointEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="138px"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/hwcw_line_height"
            />

        <TextView
            android:id="@+id/tv_calendar"
            android:layout_width="wrap_content"
            android:layout_height="138px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/hwcw_line_height"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/eliminate_date_button_background"
            android:gravity="center"
            android:paddingLeft="@dimen/hwcw_line_height"
            android:textColor="@color/global_text_color"
            android:textSize="@dimen/yw_title_gqj_size"
            android:visibility="gone"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_jichu_name"
            android:background="@color/gray_background_color"/>
    </RelativeLayout>

</layout>