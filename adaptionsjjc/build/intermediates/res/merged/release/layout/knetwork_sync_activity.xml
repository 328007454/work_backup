<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/knetwork_sync_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg_network_sync"
    tools:context="com.cnksi.ksynclib.activity.KSyncXJActivity">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40px"
            android:text="@string/data_sync_str"
            android:textColor="@android:color/white"
            android:textSize="80px" />

        <TextView
            android:id="@+id/tv_iphost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60px"
            android:background="@drawable/radius_shape_textview"
            android:padding="28px"
            android:text="服务器地址：192.168.31.3"
            android:textColor="@android:color/white"
            android:textSize="44px" />

        <TextView
            android:id="@+id/tv_upload"
            android:layout_width="468px"
            android:layout_height="468px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80px"
            android:background="@drawable/sync_upload_textview"
            android:drawablePadding="60px"
            android:drawableTop="@mipmap/icon_upload_data"
            android:gravity="center_horizontal"
            android:paddingTop="80px"
            android:text="上传数据"
            android:textColor="@android:color/white"
            android:textSize="55px" />


        <TextView
            android:id="@+id/tv_download"
            android:layout_width="468px"
            android:layout_height="468px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="109px"
            android:background="@drawable/sync_download_textview"
            android:drawablePadding="60px"
            android:drawableTop="@mipmap/icon_down_data"
            android:gravity="center_horizontal"
            android:paddingTop="80px"
            android:text="下载数据"
            android:textColor="@android:color/white"
            android:textSize="55px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="40px"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progressBar2"
                style="@style/DataSyncProgressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDuration="1500"
                android:visibility="gone" />
            <!-- 操作进度条显示 -->

            <TextView
                android:id="@+id/tv_progressBar_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/white"
                android:text=""
                android:textSize="38px"
                android:visibility="visible" />
        </LinearLayout>
</LinearLayout>