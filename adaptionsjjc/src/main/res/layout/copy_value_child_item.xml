<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mykeyboard="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_background_selector"
    android:minHeight="@dimen/list_item_minheight"
    android:paddingBottom="@dimen/global_padding_top_bottom"
    android:paddingLeft="@dimen/global_padding_left_right"
    android:paddingRight="@dimen/global_padding_left_right"
    android:paddingTop="@dimen/global_padding_top_bottom" >

    <LinearLayout
        android:id="@+id/ll_copy_value_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_copy_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:gravity="center"
            android:hint="@string/please_input_value_str"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLength="8"
            android:minHeight="@dimen/edit_text_minheight"
            android:minWidth="@dimen/edit_text_minwidth"
            android:selectAllOnFocus="true"
            android:textColor="@color/green_color"
            android:textColorHint="@color/global_gray_text_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/global_text_size" />

        <ImageButton
            android:id="@+id/ibtn_history_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_padding_half_left_right"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:visibility="visible"
            android:src="@drawable/history_button_background" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_copy_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ll_copy_value_container"
        android:drawablePadding="@dimen/drawable_padding"
        android:focusable="true"
        android:gravity="center_vertical|left"
        android:textColor="@color/global_text_color"
        android:textSize="@dimen/global_text_size" />

</RelativeLayout>