<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xs_list_item_background_selector">

    <LinearLayout
        android:id="@+id/ll_copy_value_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/xs_global_padding_top_bottom_px"
        android:layout_marginRight="@dimen/xs_global_padding_left_right_px"
        android:layout_marginTop="@dimen/xs_global_padding_top_bottom_px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:id="@+id/et_copy_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="@string/xs_please_input_value_str"
            android:maxLength="8"
            android:minHeight="@dimen/xs_edit_text_minheight_px"
            android:minWidth="@dimen/xs_edit_text_minwidth_px"
            android:textColor="@color/xs_green_color"
            android:textColorHint="@color/xs_global_gray_text_color"
            android:textCursorDrawable="@drawable/xs_cursor_text_color"
            android:textSize="@dimen/xs_global_text_size_px" />

        <ImageButton
            app:srcCompat="@drawable/xs_history_button_background"
            android:id="@+id/ibtn_history_data"
            android:layout_width="64px"
            android:scaleType="centerInside"
            android:layout_height="64px"
            android:layout_marginLeft="@dimen/xs_global_padding_half_left_right_px"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:minHeight="@dimen/xs_list_item_minheight_px"
        android:id="@+id/tv_copy_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/xs_global_padding_left_right_px"
        android:layout_toLeftOf="@id/ll_copy_value_container"
        android:drawablePadding="@dimen/xs_drawable_padding_px"
        android:focusable="true"
        android:gravity="center_vertical|left"
        android:textColor="@color/xs_global_text_color"
        android:textSize="@dimen/xs_global_text_size_px" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:background="@color/xs_line_color" />

</RelativeLayout></layout>