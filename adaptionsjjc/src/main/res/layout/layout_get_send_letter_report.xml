<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:id="@+id/ll_report_content_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/global_padding_top_bottom"
    android:layout_marginTop="-1480px"
    android:background="@mipmap/ic_report_background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/global_padding_half_left_right"
    android:paddingRight="@dimen/global_padding_half_left_right"
    android:paddingTop="@dimen/report_padding_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/global_padding_left_right"
        android:layout_marginRight="@dimen/global_padding_left_right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="开始时间:"
            android:textColor="@color/global_gray_text_color"
            android:textSize="@dimen/device_item_name_text_size"/>

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="left|center_vertical"
            android:textColor="@color/green_color"
            android:textSize="@dimen/global_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/global_padding_left_right"
        android:layout_marginRight="@dimen/global_padding_left_right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="结束时间:"
            android:textColor="@color/global_gray_text_color"
            android:textSize="@dimen/device_item_name_text_size"/>

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="left|center_vertical"
            android:textColor="@color/green_color"
            android:textSize="@dimen/global_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/global_padding_left_right"
        android:layout_marginRight="@dimen/global_padding_left_right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="测试人员:"
            android:textColor="@color/global_gray_text_color"
            android:textSize="@dimen/device_item_name_text_size"/>

        <TextView
            android:id="@+id/tv_person"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="left|center_vertical"
            android:textColor="@color/green_color"
            android:textSize="@dimen/global_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/global_padding_left_right"
        android:layout_marginRight="@dimen/global_padding_left_right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="天&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;气:"
            android:textColor="@color/global_gray_text_color"
            android:textSize="@dimen/device_item_name_text_size"/>

        <TextView
            android:id="@+id/tv_weather"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="left|center_vertical"
            android:textColor="@color/green_color"
            android:textSize="@dimen/global_text_size"/>
    </LinearLayout>

    <com.cnksi.sjjc.View.DotView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/global_margin_top"
        android:text="测试结果"
        android:textColor="@color/global_text_color"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_padding_left_right"
        android:background="@color/gray_background_color"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:minHeight="@dimen/inspection_result_minheight"
        android:orientation="vertical"
        android:paddingBottom="@dimen/global_padding_small_left_right"
        android:paddingTop="@dimen/global_padding_small_left_right">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_inspection_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/global_padding_left_right"
                android:gravity="left|center_vertical"
                android:text="测试结论:"
                android:textColor="@color/global_gray_text_color"
                android:textSize="@dimen/device_item_name_text_size"/>

            <TextView
                android:id="@+id/tv_test_conclusion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/global_padding_left_right"
                android:layout_weight="1"
                android:textColor="@color/global_gray_text_color"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_look_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="@dimen/global_padding_left_right"
                android:layout_marginRight="@dimen/global_padding_left_right"
                android:background="@drawable/red_button_background_selector"
                android:clickable="true"
                android:drawableLeft="@mipmap/ic_continue_inspection"
                android:drawablePadding="@dimen/drawable_padding"
                android:gravity="center"
                android:paddingBottom="@dimen/text_button_padding_top"
                android:paddingLeft="@dimen/text_button_padding_left"
                android:paddingRight="@dimen/text_button_padding_left"
                android:paddingTop="@dimen/text_button_padding_top"
                android:text="查看详情"
                android:textColor="@android:color/white"
                android:textSize="@dimen/device_item_name_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/global_padding_left_right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/global_padding_left_right"
                android:text="测试情况:"
                android:textColor="@color/global_gray_text_color"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_test_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/global_padding_left_right"
                android:textColor="@color/global_gray_text_color"
                android:textSize="14sp"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_exception"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.cnksi.sjjc.View.DotView
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:text="异常照片"
            android:textSize="14sp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_exception_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>
