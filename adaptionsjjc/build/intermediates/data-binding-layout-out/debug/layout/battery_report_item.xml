<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_battery_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/global_padding_left_right"
        android:gravity="left|center_vertical"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/global_padding_left_right"
        android:gravity="left|center_vertical"
        android:text="抄录完成情况"
        android:textSize="18sp"/>


    <LinearLayout
        style="@style/AnimalReportLinearLayoutStyle"
        android:gravity="center_vertical"
        android:minHeight="30dp">

        <TextView
            style="@style/AnimalReportTextViewStyle"
            android:layout_width="wrap_content"
            android:text="电压抄录:"
            />

        <TextView
            android:id="@+id/tv_dianya_record"
            style="@style/AnimalReportTextViewStyle"
            android:layout_weight="1"
            android:textColor="@color/green_color"
            />

        <TextView
            style="@style/AnimalReportTextViewStyle"
            android:layout_width="wrap_content"
            android:text="内阻抄录:"
            />

        <TextView
            android:id="@+id/tv_dianzu_record"
            style="@style/AnimalReportTextViewStyle"
            android:layout_weight="1"
            android:textColor="@color/green_color"
            />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/global_padding_left_right"
        android:gravity="left|center_vertical"
        android:hint="异常照片"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_battery_pics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hwcw_line_height"
        android:background="@drawable/dotted_line_background"/>


</LinearLayout>
