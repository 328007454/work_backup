<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="DevicePartLayout"></data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_photo_container"
        android:layout_width="wrap_content"
        android:layout_height="210px"
        android:layout_marginLeft="@dimen/xs_global_padding_left_right_px"
        android:background="#00000000"
        android:gravity="top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_device_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/xs_line_height_px"
            android:background="@android:color/white"
            android:contentDescription="@null"
            android:visibility="gone" />


        <TextView
            android:id="@+id/iv_device_part_name"
            android:layout_width="210px"
            android:layout_height="210px"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/xs_grass_base_button_background_selector"
            android:gravity="center"
            android:textColor="@color/xs_global_base_color"
            android:textSize="@dimen/xs_device_item_name_text_size_px"
            android:visibility="visible"
            app:layout_auto_baseheight="width" />

        <TextView
            android:id="@+id/tv_device_part_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_device_part"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:textColor="@color/xs_global_text_color"
            android:textSize="@dimen/xs_device_item_name_text_size_px"
            android:visibility="gone" />

        <!-- 设备部件上 显示该部件缺陷数量 -->

        <TextView
            android:id="@+id/tv_device_defect_count"
            android:layout_width="@dimen/xs_device_defect_count_minheight_px"
            android:layout_height="@dimen/xs_device_defect_count_minheight_px"
            android:layout_gravity="right"
            android:background="@color/xs_yellow_color"
            android:gravity="center"
            android:text="22"
            android:textColor="@android:color/white"
            android:textSize="@dimen/xs_device_defect_count_text_size_px"
            android:visibility="visible"
            app:layout_auto_baseheight="width" />
    </FrameLayout>
</layout>