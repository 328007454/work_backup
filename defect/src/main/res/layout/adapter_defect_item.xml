<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="">

    </data>

    <com.cnksi.core.view.UnderLineLinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="363px"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:paddingTop="45px"
        app:drawUnderLine="true"
        app:lineColor="#eeeeee"
        app:marginLeft="@dimen/xs__30px">

        <ImageView
            android:id="@+id/iv_defect_image"
            android:layout_width="219px"
            android:layout_height="219px"
            android:background="#1bbc9b"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_nodefect"
            android:textColor="@android:color/white"
            app:layout_auto_baseheight="width" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_defect_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:maxLines="2"
                    android:padding="6px"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="38px" />

                <TextView
                    android:id="@+id/tv_defect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21px"
                    android:gravity="center_vertical|left"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="40px" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_defect_discover_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffb5c8c6"
                    android:textSize="33px" />

                <TextView
                    android:id="@+id/tv_defect_remind_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sjjc_30px"
                    android:text=""
                    android:textColor="#ffb5c8c6"
                    android:textSize="33px" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_record_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5px"
                android:layout_marginTop="10px"
                android:gravity="center"
                android:text="记录人："
                android:textColor="#ffb5c8c6"
                android:textSize="33px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_defect_space"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10px"
                    android:gravity="left|center_vertical"
                    android:text="间隔："
                    android:textColor="#ffb5c8c6"
                    android:textSize="33px" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txt_defect_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="正在跟踪..."
                    android:textColor="@color/refresh_background_color"
                    android:textSize="@dimen/core_padding_30px"
                    android:visibility="gone" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_defect_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:gravity="center"
                android:text="设备："
                android:textColor="#ffb5c8c6"
                android:textSize="33px" />
        </LinearLayout>

    </com.cnksi.core.view.UnderLineLinearLayout>
</layout>