<?xml version="1.0" encoding="utf-8"?>
<layout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/container_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10px"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/xs_global_padding_top_bottom_px"
            android:paddingTop="@dimen/xs_global_padding_top_bottom_px">

            <Button
                android:id="@+id/btn_cancel"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/xs_global_padding_left_right_px"
                android:layout_marginRight="@dimen/xs_global_padding_left_right_px"
                android:layout_weight="1"

                android:background="@drawable/button_selector_f96a6a"
                android:gravity="center"
                android:minHeight="@dimen/xs_button_minheight"
                android:text="@string/xs_dialog_cancle_str"
                android:textColor="@android:color/white"
                android:textSize="@dimen/xs_global_text_size_px" />

            <Button
                android:id="@+id/btn_sure"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/xs_global_padding_left_right_px"
                android:layout_marginRight="@dimen/xs_global_padding_left_right_px"
                android:layout_weight="1"
                android:background="@drawable/selector_019bfb"
                android:gravity="center"
                android:minHeight="@dimen/xs_button_minheight"
                android:text="@string/xs_dialog_sure_str"
                android:textColor="@android:color/white"
                android:textSize="@dimen/xs_global_text_size_px" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/container_sure">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f3f4f4">

                <com.cnksi.core.view.UnderLineLinearLayout
                    android:id="@+id/container_row_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_189px"
                    android:background="@drawable/xs_bottom_line_background_selector"
                    android:orientation="horizontal"
                    android:paddingTop="30px"
                    app:layout_constraintTop_toTopOf="parent"
                    app:lineColor="@color/white"
                    app:lineHeight="3px">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/xs_bottom_line_background_selector"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_20px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="33px"
                            android:text="变电站名称"
                            android:textColor="@color/color_81878e"
                            android:textSize="@dimen/dimen_33px" />

                        <TextView
                            android:id="@+id/txt_bdz_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:drawableRight="@drawable/ic_arrow_right"
                            android:gravity="center_vertical"
                            android:hint="请选择变电站"
                            android:paddingLeft="@dimen/core_padding_30px"
                            android:paddingRight="@dimen/core_padding_30px"
                            android:textColor="@color/xs_global_text_color"
                            android:textColorHint="@color/xs_global_gray_text_color"
                            android:textSize="@dimen/xs__39px" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="90px"
                        android:layout_gravity="center_vertical"
                        android:background="@color/gray_background_color" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/xs_bottom_line_background_selector"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_20px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="33px"
                            android:text="间隔名称"
                            android:textColor="@color/color_81878e"
                            android:textSize="@dimen/dimen_33px" />

                        <TextView
                            android:id="@+id/txt_space_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/ic_arrow_right"
                            android:gravity="center_vertical"
                            android:hint="请选择间隔"
                            android:paddingLeft="@dimen/core_padding_30px"
                            android:paddingRight="@dimen/core_padding_30px"
                            android:textColor="@color/xs_global_text_color"
                            android:textColorHint="@color/xs_global_gray_text_color"
                            android:textSize="@dimen/xs__39px" />
                    </LinearLayout>

                </com.cnksi.core.view.UnderLineLinearLayout>


                <com.cnksi.core.view.UnderLineLinearLayout
                    android:id="@+id/container_row_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_189px"
                    android:background="@drawable/xs_bottom_line_background_selector"
                    android:orientation="horizontal"
                    android:paddingTop="30px"
                    app:layout_constraintTop_toBottomOf="@+id/container_row_one">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/xs_bottom_line_background_selector"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="33px"
                            android:text="设备名称"
                            android:textColor="@color/color_81878e"
                            android:textSize="@dimen/dimen_33px" />

                        <LinearLayout
                            android:id="@+id/container_device"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@+id/container_row_one">

                            <com.cnksi.common.view.ContainsEmojiEditText
                                android:id="@+id/et_input_device"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint="请选择或者输入"
                                android:inputType="textMultiLine"
                                android:paddingLeft="@dimen/core_padding_30px"
                                android:selectAllOnFocus="true"
                                android:singleLine="false"
                                android:textColor="@color/xs_global_text_color"
                                android:textColorHint="@color/xs_global_gray_text_color"
                                android:textSize="@dimen/xs__39px" />

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/iv_select_device"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimen_120px"
                                android:paddingBottom="@dimen/core_padding_30px"
                                android:paddingLeft="120px"
                                android:paddingRight="@dimen/core_padding_30px"
                                android:paddingTop="@dimen/core_padding_30px"
                                app:srcCompat="@drawable/ic_arrow_right" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="90px"
                        android:layout_gravity="center_vertical"
                        android:background="@color/gray_background_color" />

                    <LinearLayout
                        android:id="@+id/container_devicepart"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/xs_bottom_line_background_selector"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="33px"
                            android:text="部件名称"
                            android:textColor="@color/color_81878e"
                            android:textSize="@dimen/dimen_33px" />


                        <TextView
                            android:id="@+id/txt_device_part_name"
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/core_padding_30px"
                            android:paddingRight="@dimen/core_padding_30px"
                            android:textColor="@color/xs_global_text_color"
                            android:textColorHint="@color/xs_global_gray_text_color"
                            android:textSize="@dimen/xs__39px"
                            android:visibility="visible"
                            app:layout_constraintTop_toBottomOf="@+id/container_device" />
                    </LinearLayout>

                </com.cnksi.core.view.UnderLineLinearLayout>

                <com.cnksi.core.view.UnderLineLinearLayout
                    android:id="@+id/container_row_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/xs_bottom_line_background_selector"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/container_row_two">


                    <com.cnksi.core.view.UnderLineLinearLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="@dimen/dimen_189px"
                        android:orientation="vertical"
                        android:paddingTop="45px"
                        app:lineColor="@color/white"
                        app:lineHeight="3px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="33px"
                            android:text="缺陷内容"
                            android:textColor="@color/color_81878e"
                            android:textSize="@dimen/dimen_33px" />

                        <com.cnksi.common.view.ContainsEmojiEditText
                            android:id="@+id/et_input_defect_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/xs__30px"
                            android:layout_marginTop="30px"
                            android:layout_toLeftOf="@+id/iv_defect_pic"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical|left"
                            android:hint="@string/xs_please_input_defect_content_str"
                            android:inputType="textMultiLine"
                            android:selectAllOnFocus="true"
                            android:singleLine="false"
                            android:textColor="@color/xs_global_text_color"
                            android:textColorHint="@color/xs_global_gray_text_color"
                            android:textSize="@dimen/xs__39px" />
                    </com.cnksi.core.view.UnderLineLinearLayout>

                    <RelativeLayout
                        android:id="@+id/container_defect"
                        android:layout_width="300px"
                        android:layout_height="189px">

                        <ImageButton
                            android:id="@+id/ib_take_picture"
                            style="@style/svgButtonCamera"
                            android:layout_width="@dimen/xs_content_minheight_px"
                            android:layout_height="@dimen/xs_content_minheight_px"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:contentDescription="@null"
                            app:srcCompat="@drawable/xs_camera_button_background" />

                        <ImageView
                            android:id="@+id/iv_defect_pic"
                            android:layout_width="@dimen/xs_new_defect_photo_height"
                            android:layout_height="@dimen/xs_new_defect_photo_height_px"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/core_padding_30px"
                            android:layout_toLeftOf="@+id/ib_take_picture"
                            android:contentDescription="@null"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/tv_defect_count"
                            android:layout_width="@dimen/xs_defect_count_width_px"
                            android:layout_height="@dimen/xs_defect_count_width_px"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="10px"
                            android:layout_marginTop="20px"
                            android:layout_toLeftOf="@+id/ib_take_picture"
                            android:background="@drawable/xs_circle_text_background"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/xs_defect_count_text_size_px"
                            android:visibility="invisible" />
                    </RelativeLayout>
                </com.cnksi.core.view.UnderLineLinearLayout>


                <TextView
                    android:id="@+id/txt_defect_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/xs__30px"
                    android:paddingTop="45px"
                    android:text="缺陷性质"
                    android:textColor="@color/color_81878e"
                    android:textSize="@dimen/dimen_33px"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/container_row_three" />

                <com.cnksi.common.view.FlowRadioGroup
                    android:id="@+id/container_rb_general_defect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/core_bg_white_ffffff"
                    android:columnCount="3"
                    android:paddingBottom="@dimen/_20px"
                    android:paddingLeft="@dimen/core_padding_30px"
                    android:paddingRight="@dimen/xs_global_padding_left_right_px"
                    android:paddingTop="@dimen/_20px"
                    android:rowCount="2"
                    app:layout_constraintTop_toBottomOf="@+id/txt_defect_tips">

                    <com.cnksi.common.view.CustomRadioButton
                        android:id="@+id/rb_general_defect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:button="@null"
                        android:checked="true"
                        android:clickable="true"
                        android:drawablePadding="10px"
                        android:text="@string/xs_general_defect_str"
                        android:textColor="@color/xs_radio_button_text_selector"
                        android:textSize="@dimen/xs__39px"
                        app:drawableLeft="@drawable/xs_radio_button_selector"
                        app:drawableSize="@dimen/xs__39px" />

                    <com.cnksi.common.view.CustomRadioButton
                        android:id="@+id/rb_serious_defect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:button="@null"
                        android:clickable="true"
                        android:drawablePadding="10px"
                        android:text="@string/xs_serious_defect_str"
                        android:textColor="@color/xs_radio_button_text_selector"
                        android:textSize="@dimen/xs__39px"
                        app:drawableLeft="@drawable/xs_radio_button_selector"
                        app:drawableSize="@dimen/xs__39px" />

                    <com.cnksi.common.view.CustomRadioButton
                        android:id="@+id/rb_crisis_defect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:button="@null"
                        android:clickable="true"
                        android:drawablePadding="10px"
                        android:text="@string/xs_crisis_defect_str"
                        android:textColor="@color/xs_radio_button_text_selector"
                        android:textSize="@dimen/xs__39px"
                        app:drawableLeft="@drawable/xs_radio_button_selector"
                        app:drawableSize="@dimen/xs__39px" />

                    <com.cnksi.common.view.CustomRadioButton
                        android:id="@+id/rb_problem_defect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginTop="@dimen/_20px"
                        android:layout_rowWeight="1"
                        android:button="@null"
                        android:clickable="true"
                        android:drawablePadding="10px"
                        android:text="问题"
                        android:textColor="@color/xs_radio_button_text_selector"
                        android:textSize="@dimen/xs__39px"
                        app:drawableLeft="@drawable/xs_radio_button_selector"
                        app:drawableSize="@dimen/xs__39px" />

                    <com.cnksi.common.view.CustomRadioButton
                        android:id="@+id/rb_hidden_defect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginTop="@dimen/_20px"
                        android:layout_rowWeight="1"
                        android:button="@null"
                        android:clickable="true"
                        android:drawablePadding="10px"
                        android:text="隐患"
                        android:textColor="@color/xs_radio_button_text_selector"
                        android:textSize="@dimen/xs__39px"
                        app:drawableLeft="@drawable/xs_radio_button_selector"
                        app:drawableSize="@dimen/xs__39px" />

                </com.cnksi.common.view.FlowRadioGroup>


                <TextView
                    android:id="@+id/title_ele_internet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xs__39px"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/xs_global_padding_left_right_px"
                    android:paddingTop="@dimen/xs_text_button_padding_top_px"
                    android:text="是否影响电网运行"
                    android:textColor="@color/color_81878e"
                    android:textSize="@dimen/dimen_33px"
                    app:layout_constraintTop_toBottomOf="@+id/container_rb_general_defect" />

                <com.cnksi.common.view.AutoRadioGroup
                    android:id="@+id/container_rg_ele_internet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/xs_bottom_line_background_selector"
                    android:gravity="center_vertical"
                    android:minHeight="111px"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/xs_global_padding_left_right_px"
                    android:paddingRight="@dimen/xs_global_padding_left_right_px"
                    android:weightSum="3"
                    app:layout_constraintTop_toBottomOf="@+id/title_ele_internet">

                    <com.cnksi.common.view.CustomRadioButton
                        android:id="@+id/rb_influnce_yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:clickable="true"
                        android:drawablePadding="10px"
                        android:text="是"
                        android:textColor="@color/xs_radio_button_text_selector"
                        android:textSize="@dimen/xs__39px"
                        app:drawableLeft="@drawable/xs_radio_button_selector"
                        app:drawableSize="@dimen/xs__39px" />

                    <com.cnksi.common.view.CustomRadioButton
                        android:id="@+id/rb_influnce_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:checked="true"
                        android:clickable="true"
                        android:drawablePadding="10px"
                        android:text="否"
                        android:textColor="@color/xs_radio_button_text_selector"
                        android:textSize="@dimen/xs__39px"
                        app:drawableLeft="@drawable/xs_radio_button_selector"
                        app:drawableSize="@dimen/xs__39px" />

                    <com.cnksi.common.view.CustomRadioButton
                        android:id="@+id/rb_influnce_nothing"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:clickable="true"
                        android:drawablePadding="10px"
                        android:text="不清楚"
                        android:textColor="@color/xs_radio_button_text_selector"
                        android:textSize="@dimen/xs__39px"
                        app:drawableLeft="@drawable/xs_radio_button_selector"
                        app:drawableSize="@dimen/xs__39px" />
                </com.cnksi.common.view.AutoRadioGroup>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_defect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/container_rg_ele_internet" />
            </android.support.constraint.ConstraintLayout>
        </ScrollView>


    </RelativeLayout>
</layout>