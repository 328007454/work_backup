<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape  android:shape="oval" android:useLevel="false" >
            <size android:width="448px" android:height="448px"/>
            <solid android:color="#5CB4F4" />
            <stroke android:width="20px" android:color="#82D5D3" />
            <padding
                android:left="2dp"
                android:top="1dp"
                android:right="2dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape  android:shape="oval" android:useLevel="false" >
            <size android:width="448px" android:height="448px"/>
            <solid android:color="#5CB4F4" />
            <stroke android:width="20px" android:color="#82D5D3" />
            <padding
                android:left="2dp"
                android:top="1dp"
                android:right="2dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>